# frozen_string_literal: true

source "https://rubygems.org"

# Use the flatpack gem from the parent directory
gem "flat_pack", path: "../.."

# Rails and core dependencies
gem "rails", "~> 8.0"
gem "puma", ">= 5.0"
gem "propshaft", "~> 1.0"
gem "sqlite3", ">= 2.1"
gem "pg", "~> 1.5"

# Asset pipeline and frontend
gem "tailwindcss-rails", "~> 3.0"
gem "importmap-rails"
gem "stimulus-rails"
gem "turbo-rails"

# View components
gem "view_component"

group :development, :test do
  gem "debug", platforms: %i[mri mingw x64_mingw]
end

group :development do
  gem "web-console"
end

group :test do
  gem "capybara"
  gem "selenium-webdriver"
end
