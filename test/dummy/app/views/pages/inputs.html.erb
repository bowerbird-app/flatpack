<% content_for :title, "Input Components - FlatPack" %>

<div class="max-w-4xl mx-auto p-8">
  <h1 class="text-4xl font-bold mb-2 text-[var(--color-foreground)]">Input Components</h1>
  <p class="text-[var(--color-muted-foreground)] mb-8">Text-based input components with Stimulus integration</p>

  <!-- Text Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Text Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Standard single-line text field</p>
    
    <div class="space-y-4">
      <%= render FlatPack::TextInput::Component.new(
        name: "username",
        text: "Username",
        placeholder: "Enter your username",
        required: true
      ) %>

      <%= render FlatPack::TextInput::Component.new(
        name: "username_error",
        text: "Username (with error)",
        value: "john",
        error: "Username must be at least 5 characters"
      ) %>

      <%= render FlatPack::TextInput::Component.new(
        name: "username_disabled",
        text: "Username (disabled)",
        value: "johndoe",
        disabled: true
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::TextInput::Component.new(
  name: "username",
  text: "Username",
  placeholder: "Enter your username",
  required: true
) %&gt;

&lt;%= render FlatPack::TextInput::Component.new(
  name: "username_error",
  text: "Username (with error)",
  value: "john",
  error: "Username must be at least 5 characters"
) %&gt;</code></pre>
  </section>

  <!-- Password Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Password Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Masked input with show/hide toggle</p>
    
    <div class="space-y-4">
      <%= render FlatPack::PasswordInput::Component.new(
        name: "password",
        text: "Password",
        placeholder: "Enter your password",
        required: true
      ) %>

      <%= render FlatPack::PasswordInput::Component.new(
        name: "password_error",
        text: "Password (with error)",
        error: "Password must contain at least one number"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::PasswordInput::Component.new(
  name: "password",
  text: "Password",
  placeholder: "Enter your password",
  required: true
) %&gt;

&lt;%= render FlatPack::PasswordInput::Component.new(
  name: "password_error",
  text: "Password (with error)",
  error: "Password must contain at least one number"
) %&gt;</code></pre>
  </section>

  <!-- Email Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Email Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Email field with mobile @ keyboard support</p>
    
    <div class="space-y-4">
      <%= render FlatPack::EmailInput::Component.new(
        name: "email",
        text: "Email Address",
        placeholder: "you@example.com",
        required: true
      ) %>

      <%= render FlatPack::EmailInput::Component.new(
        name: "email_error",
        text: "Email (with error)",
        value: "invalid-email",
        error: "Please enter a valid email address"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::EmailInput::Component.new(
  name: "email",
  text: "Email Address",
  placeholder: "you@example.com",
  required: true
) %&gt;

&lt;%= render FlatPack::EmailInput::Component.new(
  name: "email_error",
  text: "Email (with error)",
  value: "invalid-email",
  error: "Please enter a valid email address"
) %&gt;</code></pre>
  </section>

  <!-- Phone Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Phone Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Phone field with numeric keypad on mobile</p>
    
    <div class="space-y-4">
      <%= render FlatPack::PhoneInput::Component.new(
        name: "phone",
        text: "Phone Number",
        placeholder: "+1 (555) 123-4567"
      ) %>

      <%= render FlatPack::PhoneInput::Component.new(
        name: "phone_error",
        text: "Phone (with error)",
        value: "123",
        error: "Phone number must be at least 10 digits"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::PhoneInput::Component.new(
  name: "phone",
  text: "Phone Number",
  placeholder: "+1 (555) 123-4567"
) %&gt;

&lt;%= render FlatPack::PhoneInput::Component.new(
  name: "phone_error",
  text: "Phone (with error)",
  value: "123",
  error: "Phone number must be at least 10 digits"
) %&gt;</code></pre>
  </section>

  <!-- Search Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Search Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Search field with clear button (appears when typing)</p>
    
    <div class="space-y-4">
      <%= render FlatPack::SearchInput::Component.new(
        name: "search",
        text: "Search",
        placeholder: "Search for anything..."
      ) %>

      <%= render FlatPack::SearchInput::Component.new(
        name: "search_with_value",
        text: "Search (with value)",
        value: "sample query"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::SearchInput::Component.new(
  name: "search",
  text: "Search",
  placeholder: "Search for anything..."
) %&gt;

&lt;%= render FlatPack::SearchInput::Component.new(
  name: "search_with_value",
  text: "Search (with value)",
  value: "sample query"
) %&gt;</code></pre>
  </section>

  <!-- URL Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">URL Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">URL field with validation and .com keyboard on mobile</p>
    
    <div class="space-y-4">
      <%= render FlatPack::UrlInput::Component.new(
        name: "website",
        text: "Website URL",
        placeholder: "https://example.com"
      ) %>

      <%= render FlatPack::UrlInput::Component.new(
        name: "website_error",
        text: "Website (with error)",
        value: "not-a-url",
        error: "Please enter a valid URL"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::UrlInput::Component.new(
  name: "website",
  text: "Website URL",
  placeholder: "https://example.com"
) %&gt;

&lt;%= render FlatPack::UrlInput::Component.new(
  name: "website_error",
  text: "Website (with error)",
  value: "not-a-url",
  error: "Please enter a valid URL"
) %&gt;</code></pre>
  </section>

  <!-- Text Area -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Text Area</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Multi-line input that auto-expands (try typing multiple lines)</p>
    
    <div class="space-y-4">
      <%= render FlatPack::TextArea::Component.new(
        name: "description",
        text: "Description",
        placeholder: "Enter a detailed description...",
        rows: 3
      ) %>

      <%= render FlatPack::TextArea::Component.new(
        name: "description_with_value",
        text: "Description (with value)",
        value: "This is a sample description.\nIt has multiple lines.\nTry adding more!",
        rows: 3
      ) %>

      <%= render FlatPack::TextArea::Component.new(
        name: "description_error",
        text: "Description (with error)",
        error: "Description must be at least 50 characters",
        rows: 3
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::TextArea::Component.new(
  name: "description",
  text: "Description",
  placeholder: "Enter a detailed description...",
  rows: 3
) %&gt;

&lt;%= render FlatPack::TextArea::Component.new(
  name: "description_error",
  text: "Description (with error)",
  error: "Description must be at least 50 characters",
  rows: 3
) %&gt;</code></pre>
  </section>

  <!-- Combined Form Example -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Complete Form Example</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">All input components in a single form</p>
    
    <form class="space-y-4 p-6 border border-[var(--color-border)] rounded-[var(--radius-lg)] bg-[var(--color-muted)]">
      <%= render FlatPack::TextInput::Component.new(
        name: "full_name",
        text: "Full Name",
        placeholder: "John Doe",
        required: true
      ) %>

      <%= render FlatPack::EmailInput::Component.new(
        name: "contact_email",
        text: "Email",
        placeholder: "john@example.com",
        required: true
      ) %>

      <%= render FlatPack::PhoneInput::Component.new(
        name: "contact_phone",
        text: "Phone Number",
        placeholder: "+1 (555) 123-4567"
      ) %>

      <%= render FlatPack::PasswordInput::Component.new(
        name: "account_password",
        text: "Password",
        placeholder: "Enter a secure password",
        required: true
      ) %>

      <%= render FlatPack::UrlInput::Component.new(
        name: "portfolio",
        text: "Portfolio URL",
        placeholder: "https://yourportfolio.com"
      ) %>

      <%= render FlatPack::TextArea::Component.new(
        name: "bio",
        text: "Biography",
        placeholder: "Tell us about yourself...",
        rows: 4
      ) %>

      <div class="pt-4">
        <%= render FlatPack::Button::Component.new(
          text: "Submit Form",
          style: :primary,
          size: :md
        ) %>
      </div>
    </form>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;form class="space-y-4"&gt;
  &lt;%= render FlatPack::TextInput::Component.new(
    name: "full_name",
    text: "Full Name",
    placeholder: "John Doe",
    required: true
  ) %&gt;

  &lt;%= render FlatPack::EmailInput::Component.new(
    name: "contact_email",
    text: "Email",
    placeholder: "john@example.com",
    required: true
  ) %&gt;

  &lt;%= render FlatPack::PhoneInput::Component.new(
    name: "contact_phone",
    text: "Phone Number",
    placeholder: "+1 (555) 123-4567"
  ) %&gt;

  &lt;%= render FlatPack::PasswordInput::Component.new(
    name: "account_password",
    text: "Password",
    placeholder: "Enter a secure password",
    required: true
  ) %&gt;

  &lt;%= render FlatPack::UrlInput::Component.new(
    name: "portfolio",
    text: "Portfolio URL",
    placeholder: "https://yourportfolio.com"
  ) %&gt;

  &lt;%= render FlatPack::TextArea::Component.new(
    name: "bio",
    text: "Biography",
    placeholder: "Tell us about yourself...",
    rows: 4
  ) %&gt;

  &lt;%= render FlatPack::Button::Component.new(
    text: "Submit Form",
    style: :primary,
    size: :md
  ) %&gt;
&lt;/form&gt;</code></pre>
  </section>
</div>
