<% content_for :title, "Input Components - FlatPack" %>

<%= render FlatPack::PageTitle::Component.new(
  title: "Input Components",
  subtitle: "Text-based input components with Stimulus integration"
) %>

<%= render "pages/component_method_variables_table", component: :text_input %>

  <!-- Text Input -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Text Input", anchor_link: true, subtitle: "Examples for Text Input.") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">Standard single-line text field</p>
    
    <div class="space-y-4">
      <%= render FlatPack::TextInput::Component.new(
        name: "username",
        label: "Username",
        placeholder: "Enter your username",
        required: true
      ) %>

      <%= render FlatPack::TextInput::Component.new(
        name: "username_error",
        label: "Username (with error)",
        value: "john",
        error: "Username must be at least 5 characters"
      ) %>

      <%= render FlatPack::TextInput::Component.new(
        name: "username_disabled",
        label: "Username (disabled)",
        value: "johndoe",
        disabled: true
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::TextInput::Component.new(
          name: "username",
          label: "Username",
          placeholder: "Enter your username",
          required: true
        ) %&gt;
        
        &lt;%= render FlatPack::TextInput::Component.new(
          name: "username_error",
          label: "Username (with error)",
          value: "john",
          error: "Username must be at least 5 characters"
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>

  <!-- Password Input -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Password Input", anchor_link: true, subtitle: "Examples for Password Input.") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">Masked input with show/hide toggle</p>
    
    <div class="space-y-4">
      <%= render FlatPack::PasswordInput::Component.new(
        name: "password",
        label: "Password",
        placeholder: "Enter your password",
        required: true
      ) %>

      <%= render FlatPack::PasswordInput::Component.new(
        name: "password_error",
        label: "Password (with error)",
        error: "Password must contain at least one number"
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::PasswordInput::Component.new(
          name: "password",
          label: "Password",
          placeholder: "Enter your password",
          required: true
        ) %&gt;
        
        &lt;%= render FlatPack::PasswordInput::Component.new(
          name: "password_error",
          label: "Password (with error)",
          error: "Password must contain at least one number"
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>

  <!-- Email Input -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Email Input", anchor_link: true, subtitle: "Examples for Email Input.") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">Email field with mobile @ keyboard support</p>
    
    <div class="space-y-4">
      <%= render FlatPack::EmailInput::Component.new(
        name: "email",
        label: "Email Address",
        placeholder: "you@example.com",
        required: true
      ) %>

      <%= render FlatPack::EmailInput::Component.new(
        name: "email_error",
        label: "Email (with error)",
        value: "invalid-email",
        error: "Please enter a valid email address"
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::EmailInput::Component.new(
          name: "email",
          label: "Email Address",
          placeholder: "you@example.com",
          required: true
        ) %&gt;
        
        &lt;%= render FlatPack::EmailInput::Component.new(
          name: "email_error",
          label: "Email (with error)",
          value: "invalid-email",
          error: "Please enter a valid email address"
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>

  <!-- Phone Input -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Phone Input", anchor_link: true, subtitle: "Examples for Phone Input.") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">Phone field with numeric keypad on mobile</p>
    
    <div class="space-y-4">
      <%= render FlatPack::PhoneInput::Component.new(
        name: "phone",
        label: "Phone Number",
        placeholder: "+1 (555) 123-4567"
      ) %>

      <%= render FlatPack::PhoneInput::Component.new(
        name: "phone_error",
        label: "Phone (with error)",
        value: "123",
        error: "Phone number must be at least 10 digits"
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::PhoneInput::Component.new(
          name: "phone",
          label: "Phone Number",
          placeholder: "+1 (555) 123-4567"
        ) %&gt;
        
        &lt;%= render FlatPack::PhoneInput::Component.new(
          name: "phone_error",
          label: "Phone (with error)",
          value: "123",
          error: "Phone number must be at least 10 digits"
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>

  <!-- Search Input -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Search Input", anchor_link: true, subtitle: "Examples for Search Input.") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">Search field with clear button (appears when typing)</p>
    
    <div class="space-y-4">
      <%= render FlatPack::SearchInput::Component.new(
        name: "search",
        label: "Search",
        placeholder: "Search for anything..."
      ) %>

      <%= render FlatPack::SearchInput::Component.new(
        name: "search_with_value",
        label: "Search (with value)",
        value: "sample query"
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::SearchInput::Component.new(
          name: "search",
          label: "Search",
          placeholder: "Search for anything..."
        ) %&gt;
        
        &lt;%= render FlatPack::SearchInput::Component.new(
          name: "search_with_value",
          label: "Search (with value)",
          value: "sample query"
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>

  <!-- URL Input -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "URL Input", anchor_link: true, subtitle: "Examples for URL Input.") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">URL field with validation and .com keyboard on mobile</p>
    
    <div class="space-y-4">
      <%= render FlatPack::UrlInput::Component.new(
        name: "website",
        label: "Website URL",
        placeholder: "https://example.com"
      ) %>

      <%= render FlatPack::UrlInput::Component.new(
        name: "website_error",
        label: "Website (with error)",
        value: "not-a-url",
        error: "Please enter a valid URL"
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::UrlInput::Component.new(
          name: "website",
          label: "Website URL",
          placeholder: "https://example.com"
        ) %&gt;
        
        &lt;%= render FlatPack::UrlInput::Component.new(
          name: "website_error",
          label: "Website (with error)",
          value: "not-a-url",
          error: "Please enter a valid URL"
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>

  <!-- Text Area -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Text Area", anchor_link: true, subtitle: "Examples for Text Area.") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">Multi-line input that auto-expands and supports optional live character counting with min/max thresholds</p>
    
    <div class="space-y-4">
      <%= render FlatPack::TextArea::Component.new(
        name: "description",
        label: "Description",
        placeholder: "Enter a detailed description...",
        rows: 3
      ) %>

      <%= render FlatPack::TextArea::Component.new(
        name: "description_with_value",
        label: "Description (with value)",
        value: "This is a sample description.\nIt has multiple lines.\nTry adding more!",
        rows: 3
      ) %>

      <%= render FlatPack::TextArea::Component.new(
        name: "description_error",
        label: "Description (with error)",
        error: "Description must be at least 50 characters",
        rows: 3
      ) %>

      <%= render FlatPack::TextArea::Component.new(
        name: "project_summary",
        id: "project_summary",
        label: "Project Summary (with character count)",
        placeholder: "Write a short summary...",
        rows: 3,
        character_count: true,
        min_characters: 30,
        max_characters: 140
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::TextArea::Component.new(
          name: "description",
          label: "Description",
          placeholder: "Enter a detailed description...",
          rows: 3
        ) %&gt;
        
        &lt;%= render FlatPack::TextArea::Component.new(
          name: "description_error",
          label: "Description (with error)",
          error: "Description must be at least 50 characters",
          rows: 3
        ) %&gt;
        
        &lt;%= render FlatPack::TextArea::Component.new(
          name: "project_summary",
          id: "project_summary",
          label: "Project Summary (with character count)",
          character_count: true,
          min_characters: 30,
          max_characters: 140,
          rows: 3
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>

  <!-- Number Input -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Number Input", anchor_link: true, subtitle: "Examples for Number Input.") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">Numeric field with min/max/step validation</p>
    
    <div class="space-y-4">
      <%= render FlatPack::NumberInput::Component.new(
        name: "quantity",
        label: "Quantity",
        placeholder: "Enter quantity",
        min: 0,
        max: 100,
        step: 1,
        required: true
      ) %>

      <%= render FlatPack::NumberInput::Component.new(
        name: "price",
        label: "Price (USD)",
        placeholder: "0.00",
        min: 0.01,
        step: 0.01,
        value: 19.99
      ) %>

      <%= render FlatPack::NumberInput::Component.new(
        name: "quantity_error",
        label: "Quantity (with error)",
        value: 150,
        error: "Quantity must not exceed 100",
        max: 100
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::NumberInput::Component.new(
          name: "quantity",
          label: "Quantity",
          placeholder: "Enter quantity",
          min: 0,
          max: 100,
          step: 1,
          required: true
        ) %&gt;
        
        &lt;%= render FlatPack::NumberInput::Component.new(
          name: "price",
          label: "Price (USD)",
          placeholder: "0.00",
          min: 0.01,
          step: 0.01,
          value: 19.99
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>

  <!-- Date Input -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Date Input", anchor_link: true, subtitle: "Examples for Date Input.") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">Date picker with min/max constraints</p>
    
    <div class="space-y-4">
      <%= render FlatPack::DateInput::Component.new(
        name: "birth_date",
        label: "Birth Date",
        placeholder: "Select date",
        max: Date.today.to_s,
        required: true
      ) %>

      <%= render FlatPack::DateInput::Component.new(
        name: "event_date",
        label: "Event Date",
        min: Date.today.to_s,
        max: (Date.today + 90).to_s,
        value: (Date.today + 7).to_s
      ) %>

      <%= render FlatPack::DateInput::Component.new(
        name: "date_error",
        label: "Date (with error)",
        error: "Date must be in the future"
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::DateInput::Component.new(
          name: "birth_date",
          label: "Birth Date",
          placeholder: "Select date",
          max: Date.today.to_s,
          required: true
        ) %&gt;
        
        &lt;%= render FlatPack::DateInput::Component.new(
          name: "event_date",
          label: "Event Date",
          min: Date.today.to_s,
          max: (Date.today + 90).to_s,
          value: (Date.today + 7).to_s
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>

  <!-- File Input -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "File Input", anchor_link: true, subtitle: "Examples for File Input.") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">File upload with drag-and-drop and previews</p>
    
    <div class="space-y-4">
      <%= render FlatPack::FileInput::Component.new(
        name: "avatar",
        label: "Profile Picture",
        accept: "image/png,image/jpeg,image/gif",
        max_size: 2_097_152, # 2MB
        preview: true
      ) %>

      <%= render FlatPack::FileInput::Component.new(
        name: "documents",
        label: "Upload Documents",
        accept: ".pdf,.doc,.docx",
        multiple: true,
        max_size: 5_242_880, # 5MB
        preview: false
      ) %>

      <%= render FlatPack::FileInput::Component.new(
        name: "file_error",
        label: "File (with error)",
        error: "File size must not exceed 5MB"
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::FileInput::Component.new(
          name: "avatar",
          label: "Profile Picture",
          accept: "image/png,image/jpeg,image/gif",
          max_size: 2_097_152, # 2MB
          preview: true
        ) %&gt;
        
        &lt;%= render FlatPack::FileInput::Component.new(
          name: "documents",
          label: "Upload Documents",
          accept: ".pdf,.doc,.docx",
          multiple: true,
          max_size: 5_242_880, # 5MB
          preview: false
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>


  <!-- Checkbox -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Checkbox", anchor_link: true, subtitle: "Examples for Checkbox.") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">Single checkbox component with label</p>
    
    <div class="space-y-4">
      <%= render FlatPack::Checkbox::Component.new(
        name: "terms",
        label: "I agree to the terms and conditions",
        required: true
      ) %>

      <%= render FlatPack::Checkbox::Component.new(
        name: "newsletter",
        label: "Subscribe to newsletter",
        checked: true
      ) %>

      <%= render FlatPack::Checkbox::Component.new(
        name: "terms_error",
        label: "I agree to the terms",
        error: "You must agree to continue"
      ) %>

      <%= render FlatPack::Checkbox::Component.new(
        name: "disabled_checkbox",
        label: "This checkbox is disabled",
        disabled: true
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::Checkbox::Component.new(
          name: "terms",
          label: "I agree to the terms and conditions",
          required: true
        ) %&gt;
        
        &lt;%= render FlatPack::Checkbox::Component.new(
          name: "newsletter",
          label: "Subscribe to newsletter",
          checked: true
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>

  <!-- Radio Group -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Radio Group", anchor_link: true, subtitle: "Examples for Radio Group.") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">Radio button group for single selection</p>
    
    <div class="space-y-6">
      <%= render FlatPack::RadioGroup::Component.new(
        name: "size",
        options: ["Small", "Medium", "Large"],
        label: "Choose a size",
        value: "Medium"
      ) %>

      <%= render FlatPack::RadioGroup::Component.new(
        name: "color",
        options: [["Red", "red"], ["Blue", "blue"], ["Green", "green"]],
        label: "Choose a color",
        required: true
      ) %>

      <%= render FlatPack::RadioGroup::Component.new(
        name: "plan",
        options: [
          {label: "Free Plan", value: "free", disabled: false},
          {label: "Pro Plan", value: "pro", disabled: false},
          {label: "Enterprise (Coming Soon)", value: "enterprise", disabled: true}
        ],
        label: "Select a plan",
        value: "pro"
      ) %>

      <%= render FlatPack::RadioGroup::Component.new(
        name: "payment_error",
        options: ["Credit Card", "PayPal", "Bank Transfer"],
        label: "Payment Method",
        error: "Please select a payment method"
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::RadioGroup::Component.new(
          name: "size",
          options: ["Small", "Medium", "Large"],
          label: "Choose a size",
          value: "Medium"
        ) %&gt;
        
        &lt;%= render FlatPack::RadioGroup::Component.new(
          name: "color",
          options: [["Red", "red"], ["Blue", "blue"], ["Green", "green"]],
          label: "Choose a color"
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>

  <!-- Select (Dropdown) -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Select (Dropdown)", anchor_link: true, subtitle: "Examples for Select (Dropdown).") %>
    <p class="text-sm text-[var(--surface-muted-content-color)] mb-4">Dropdown select with optional search functionality</p>
    
    <div class="space-y-6">
      <div>
        <h3 class="text-lg font-medium mb-2 text-[var(--surface-content-color)]">Native Select</h3>
        <%= render FlatPack::Select::Component.new(
          name: "country",
          options: ["United States", "Canada", "United Kingdom", "Australia"],
          label: "Country",
          placeholder: "Select a country",
          required: true
        ) %>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-2 text-[var(--surface-content-color)]">Select with Value/Label Pairs</h3>
        <%= render FlatPack::Select::Component.new(
          name: "state",
          options: [["California", "CA"], ["New York", "NY"], ["Texas", "TX"], ["Florida", "FL"]],
          label: "State",
          value: "CA"
        ) %>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-2 text-[var(--surface-content-color)]">Searchable Select</h3>
        <%= render FlatPack::Select::Component.new(
          name: "city",
          options: [
            "New York", "Los Angeles", "Chicago", "Houston", "Phoenix",
            "Philadelphia", "San Antonio", "San Diego", "Dallas", "San Jose",
            "Austin", "Jacksonville", "Fort Worth", "Columbus", "Indianapolis"
          ],
          label: "City",
          placeholder: "Search cities...",
          searchable: true,
          required: true
        ) %>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-2 text-[var(--surface-content-color)]">Select with Disabled Options</h3>
        <%= render FlatPack::Select::Component.new(
          name: "plan",
          options: [
            {label: "Free Plan", value: "free", disabled: false},
            {label: "Pro Plan", value: "pro", disabled: false},
            {label: "Enterprise (Coming Soon)", value: "enterprise", disabled: true}
          ],
          label: "Select a plan",
          value: "pro"
        ) %>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-2 text-[var(--surface-content-color)]">Select with Error</h3>
        <%= render FlatPack::Select::Component.new(
          name: "category",
          options: ["Electronics", "Clothing", "Books", "Food"],
          label: "Category",
          error: "Please select a category"
        ) %>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-2 text-[var(--surface-content-color)]">Disabled Select</h3>
        <%= render FlatPack::Select::Component.new(
          name: "disabled_select",
          options: ["Option 1", "Option 2"],
          label: "Disabled Select",
          value: "Option 1",
          disabled: true
        ) %>
      </div>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE'),
        &lt;%= render FlatPack::Select::Component.new(
          name: "country",
          options: ["United States", "Canada", "United Kingdom"],
          label: "Country",
          placeholder: "Select a country"
        ) %&gt;
        
        &lt;%= render FlatPack::Select::Component.new(
          name: "city",
          options: ["New York", "Los Angeles", "Chicago"],
          label: "City",
          searchable: true
        ) %&gt;
      CODE
      class: "mt-4"
    ) %>
  </section>

  <!-- Switch Component -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Switch Component", anchor_link: true, subtitle: "Examples for Switch Component.") %>
    <p class="mb-4">Modern toggle switches for boolean on/off states.</p>

    <div class="space-y-6 mb-4">
      <div>
        <h3 class="text-lg font-medium mb-3">Basic Switches</h3>
        <div class="space-y-3">
          <%= render FlatPack::Switch::Component.new(
            name: "switch_1",
            label: "Enable feature"
          ) %>
          <%= render FlatPack::Switch::Component.new(
            name: "switch_2",
            label: "Auto-save",
            checked: true
          ) %>
          <%= render FlatPack::Switch::Component.new(
            name: "switch_3",
            label: "Disabled switch",
            disabled: true
          ) %>
        </div>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-3">Switch Sizes</h3>
        <div class="space-y-3">
          <%= render FlatPack::Switch::Component.new(
            name: "switch_sm",
            label: "Small switch",
            size: :sm
          ) %>
          <%= render FlatPack::Switch::Component.new(
            name: "switch_md",
            label: "Medium switch (default)",
            size: :md
          ) %>
          <%= render FlatPack::Switch::Component.new(
            name: "switch_lg",
            label: "Large switch",
            size: :lg
          ) %>
        </div>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-3">Switch States</h3>
        <div class="space-y-3">
          <%= render FlatPack::Switch::Component.new(
            name: "switch_off",
            label: "Unchecked (OFF)"
          ) %>
          <%= render FlatPack::Switch::Component.new(
            name: "switch_on",
            label: "Checked (ON)",
            checked: true
          ) %>
          <%= render FlatPack::Switch::Component.new(
            name: "switch_disabled",
            label: "Disabled (OFF)",
            disabled: true
          ) %>
          <%= render FlatPack::Switch::Component.new(
            name: "switch_disabled_on",
            label: "Disabled (ON)",
            checked: true,
            disabled: true
          ) %>
        </div>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-3">Switch with Error</h3>
        <%= render FlatPack::Switch::Component.new(
          name: "switch_error",
          label: "Terms and conditions",
          error: "You must accept the terms and conditions",
          required: true
        ) %>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-3">Settings Panel Example</h3>
        <div class="border border-[var(--surface-border-color)] rounded-md p-4 space-y-4">
          <div class="flex items-center justify-between">
