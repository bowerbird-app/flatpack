<% content_for :title, "Input Components - FlatPack" %>

<div class="max-w-4xl mx-auto p-8">
  <h1 class="text-4xl font-bold mb-2 text-[var(--color-foreground)]">Input Components</h1>
  <p class="text-[var(--color-muted-foreground)] mb-8">Text-based input components with Stimulus integration</p>

  <!-- Text Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Text Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Standard single-line text field</p>
    
    <div class="space-y-4">
      <%= render FlatPack::TextInput::Component.new(
        name: "username",
        label: "Username",
        placeholder: "Enter your username",
        required: true
      ) %>

      <%= render FlatPack::TextInput::Component.new(
        name: "username_error",
        label: "Username (with error)",
        value: "john",
        error: "Username must be at least 5 characters"
      ) %>

      <%= render FlatPack::TextInput::Component.new(
        name: "username_disabled",
        label: "Username (disabled)",
        value: "johndoe",
        disabled: true
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::TextInput::Component.new(
  name: "username",
  label: "Username",
  placeholder: "Enter your username",
  required: true
) %&gt;

&lt;%= render FlatPack::TextInput::Component.new(
  name: "username_error",
  label: "Username (with error)",
  value: "john",
  error: "Username must be at least 5 characters"
) %&gt;</code></pre>
  </section>

  <!-- Password Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Password Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Masked input with show/hide toggle</p>
    
    <div class="space-y-4">
      <%= render FlatPack::PasswordInput::Component.new(
        name: "password",
        label: "Password",
        placeholder: "Enter your password",
        required: true
      ) %>

      <%= render FlatPack::PasswordInput::Component.new(
        name: "password_error",
        label: "Password (with error)",
        error: "Password must contain at least one number"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::PasswordInput::Component.new(
  name: "password",
  label: "Password",
  placeholder: "Enter your password",
  required: true
) %&gt;

&lt;%= render FlatPack::PasswordInput::Component.new(
  name: "password_error",
  label: "Password (with error)",
  error: "Password must contain at least one number"
) %&gt;</code></pre>
  </section>

  <!-- Email Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Email Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Email field with mobile @ keyboard support</p>
    
    <div class="space-y-4">
      <%= render FlatPack::EmailInput::Component.new(
        name: "email",
        label: "Email Address",
        placeholder: "you@example.com",
        required: true
      ) %>

      <%= render FlatPack::EmailInput::Component.new(
        name: "email_error",
        label: "Email (with error)",
        value: "invalid-email",
        error: "Please enter a valid email address"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::EmailInput::Component.new(
  name: "email",
  label: "Email Address",
  placeholder: "you@example.com",
  required: true
) %&gt;

&lt;%= render FlatPack::EmailInput::Component.new(
  name: "email_error",
  label: "Email (with error)",
  value: "invalid-email",
  error: "Please enter a valid email address"
) %&gt;</code></pre>
  </section>

  <!-- Phone Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Phone Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Phone field with numeric keypad on mobile</p>
    
    <div class="space-y-4">
      <%= render FlatPack::PhoneInput::Component.new(
        name: "phone",
        label: "Phone Number",
        placeholder: "+1 (555) 123-4567"
      ) %>

      <%= render FlatPack::PhoneInput::Component.new(
        name: "phone_error",
        label: "Phone (with error)",
        value: "123",
        error: "Phone number must be at least 10 digits"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::PhoneInput::Component.new(
  name: "phone",
  label: "Phone Number",
  placeholder: "+1 (555) 123-4567"
) %&gt;

&lt;%= render FlatPack::PhoneInput::Component.new(
  name: "phone_error",
  label: "Phone (with error)",
  value: "123",
  error: "Phone number must be at least 10 digits"
) %&gt;</code></pre>
  </section>

  <!-- Search Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Search Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Search field with clear button (appears when typing)</p>
    
    <div class="space-y-4">
      <%= render FlatPack::SearchInput::Component.new(
        name: "search",
        label: "Search",
        placeholder: "Search for anything..."
      ) %>

      <%= render FlatPack::SearchInput::Component.new(
        name: "search_with_value",
        label: "Search (with value)",
        value: "sample query"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::SearchInput::Component.new(
  name: "search",
  label: "Search",
  placeholder: "Search for anything..."
) %&gt;

&lt;%= render FlatPack::SearchInput::Component.new(
  name: "search_with_value",
  label: "Search (with value)",
  value: "sample query"
) %&gt;</code></pre>
  </section>

  <!-- URL Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">URL Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">URL field with validation and .com keyboard on mobile</p>
    
    <div class="space-y-4">
      <%= render FlatPack::UrlInput::Component.new(
        name: "website",
        label: "Website URL",
        placeholder: "https://example.com"
      ) %>

      <%= render FlatPack::UrlInput::Component.new(
        name: "website_error",
        label: "Website (with error)",
        value: "not-a-url",
        error: "Please enter a valid URL"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::UrlInput::Component.new(
  name: "website",
  label: "Website URL",
  placeholder: "https://example.com"
) %&gt;

&lt;%= render FlatPack::UrlInput::Component.new(
  name: "website_error",
  label: "Website (with error)",
  value: "not-a-url",
  error: "Please enter a valid URL"
) %&gt;</code></pre>
  </section>

  <!-- Text Area -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Text Area</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Multi-line input that auto-expands (try typing multiple lines)</p>
    
    <div class="space-y-4">
      <%= render FlatPack::TextArea::Component.new(
        name: "description",
        label: "Description",
        placeholder: "Enter a detailed description...",
        rows: 3
      ) %>

      <%= render FlatPack::TextArea::Component.new(
        name: "description_with_value",
        label: "Description (with value)",
        value: "This is a sample description.\nIt has multiple lines.\nTry adding more!",
        rows: 3
      ) %>

      <%= render FlatPack::TextArea::Component.new(
        name: "description_error",
        label: "Description (with error)",
        error: "Description must be at least 50 characters",
        rows: 3
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::TextArea::Component.new(
  name: "description",
  label: "Description",
  placeholder: "Enter a detailed description...",
  rows: 3
) %&gt;

&lt;%= render FlatPack::TextArea::Component.new(
  name: "description_error",
  label: "Description (with error)",
  error: "Description must be at least 50 characters",
  rows: 3
) %&gt;</code></pre>
  </section>

  <!-- Number Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Number Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Numeric field with min/max/step validation</p>
    
    <div class="space-y-4">
      <%= render FlatPack::NumberInput::Component.new(
        name: "quantity",
        label: "Quantity",
        placeholder: "Enter quantity",
        min: 0,
        max: 100,
        step: 1,
        required: true
      ) %>

      <%= render FlatPack::NumberInput::Component.new(
        name: "price",
        label: "Price (USD)",
        placeholder: "0.00",
        min: 0.01,
        step: 0.01,
        value: 19.99
      ) %>

      <%= render FlatPack::NumberInput::Component.new(
        name: "quantity_error",
        label: "Quantity (with error)",
        value: 150,
        error: "Quantity must not exceed 100",
        max: 100
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::NumberInput::Component.new(
  name: "quantity",
  label: "Quantity",
  placeholder: "Enter quantity",
  min: 0,
  max: 100,
  step: 1,
  required: true
) %&gt;

&lt;%= render FlatPack::NumberInput::Component.new(
  name: "price",
  label: "Price (USD)",
  placeholder: "0.00",
  min: 0.01,
  step: 0.01,
  value: 19.99
) %&gt;</code></pre>
  </section>

  <!-- Date Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Date Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Date picker with min/max constraints</p>
    
    <div class="space-y-4">
      <%= render FlatPack::DateInput::Component.new(
        name: "birth_date",
        label: "Birth Date",
        placeholder: "Select date",
        max: Date.today.to_s,
        required: true
      ) %>

      <%= render FlatPack::DateInput::Component.new(
        name: "event_date",
        label: "Event Date",
        min: Date.today.to_s,
        max: (Date.today + 90).to_s,
        value: (Date.today + 7).to_s
      ) %>

      <%= render FlatPack::DateInput::Component.new(
        name: "date_error",
        label: "Date (with error)",
        error: "Date must be in the future"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::DateInput::Component.new(
  name: "birth_date",
  label: "Birth Date",
  placeholder: "Select date",
  max: Date.today.to_s,
  required: true
) %&gt;

&lt;%= render FlatPack::DateInput::Component.new(
  name: "event_date",
  label: "Event Date",
  min: Date.today.to_s,
  max: (Date.today + 90).to_s,
  value: (Date.today + 7).to_s
) %&gt;</code></pre>
  </section>

  <!-- File Input -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">File Input</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">File upload with drag-and-drop and previews</p>
    
    <div class="space-y-4">
      <%= render FlatPack::FileInput::Component.new(
        name: "avatar",
        label: "Profile Picture",
        accept: "image/png,image/jpeg,image/gif",
        max_size: 2_097_152, # 2MB
        preview: true
      ) %>

      <%= render FlatPack::FileInput::Component.new(
        name: "documents",
        label: "Upload Documents",
        accept: ".pdf,.doc,.docx",
        multiple: true,
        max_size: 5_242_880, # 5MB
        preview: false
      ) %>

      <%= render FlatPack::FileInput::Component.new(
        name: "file_error",
        label: "File (with error)",
        error: "File size must not exceed 5MB"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::FileInput::Component.new(
  name: "avatar",
  label: "Profile Picture",
  accept: "image/png,image/jpeg,image/gif",
  max_size: 2_097_152, # 2MB
  preview: true
) %&gt;

&lt;%= render FlatPack::FileInput::Component.new(
  name: "documents",
  label: "Upload Documents",
  accept: ".pdf,.doc,.docx",
  multiple: true,
  max_size: 5_242_880, # 5MB
  preview: false
) %&gt;</code></pre>
  </section>


  <!-- Checkbox -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Checkbox</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Single checkbox component with label</p>
    
    <div class="space-y-4">
      <%= render FlatPack::Checkbox::Component.new(
        name: "terms",
        label: "I agree to the terms and conditions",
        required: true
      ) %>

      <%= render FlatPack::Checkbox::Component.new(
        name: "newsletter",
        label: "Subscribe to newsletter",
        checked: true
      ) %>

      <%= render FlatPack::Checkbox::Component.new(
        name: "terms_error",
        label: "I agree to the terms",
        error: "You must agree to continue"
      ) %>

      <%= render FlatPack::Checkbox::Component.new(
        name: "disabled_checkbox",
        label: "This checkbox is disabled",
        disabled: true
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::Checkbox::Component.new(
  name: "terms",
  label: "I agree to the terms and conditions",
  required: true
) %&gt;

&lt;%= render FlatPack::Checkbox::Component.new(
  name: "newsletter",
  label: "Subscribe to newsletter",
  checked: true
) %&gt;</code></pre>
  </section>

  <!-- Radio Group -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Radio Group</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Radio button group for single selection</p>
    
    <div class="space-y-6">
      <%= render FlatPack::RadioGroup::Component.new(
        name: "size",
        options: ["Small", "Medium", "Large"],
        label: "Choose a size",
        value: "Medium"
      ) %>

      <%= render FlatPack::RadioGroup::Component.new(
        name: "color",
        options: [["Red", "red"], ["Blue", "blue"], ["Green", "green"]],
        label: "Choose a color",
        required: true
      ) %>

      <%= render FlatPack::RadioGroup::Component.new(
        name: "plan",
        options: [
          {label: "Free Plan", value: "free", disabled: false},
          {label: "Pro Plan", value: "pro", disabled: false},
          {label: "Enterprise (Coming Soon)", value: "enterprise", disabled: true}
        ],
        label: "Select a plan",
        value: "pro"
      ) %>

      <%= render FlatPack::RadioGroup::Component.new(
        name: "payment_error",
        options: ["Credit Card", "PayPal", "Bank Transfer"],
        label: "Payment Method",
        error: "Please select a payment method"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::RadioGroup::Component.new(
  name: "size",
  options: ["Small", "Medium", "Large"],
  label: "Choose a size",
  value: "Medium"
) %&gt;

&lt;%= render FlatPack::RadioGroup::Component.new(
  name: "color",
  options: [["Red", "red"], ["Blue", "blue"], ["Green", "green"]],
  label: "Choose a color"
) %&gt;</code></pre>
  </section>

  <!-- Select (Dropdown) -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Select (Dropdown)</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">Dropdown select with optional search functionality</p>
    
    <div class="space-y-6">
      <div>
        <h3 class="text-lg font-medium mb-2 text-[var(--color-foreground)]">Native Select</h3>
        <%= render FlatPack::Select::Component.new(
          name: "country",
          options: ["United States", "Canada", "United Kingdom", "Australia"],
          label: "Country",
          placeholder: "Select a country",
          required: true
        ) %>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-2 text-[var(--color-foreground)]">Select with Value/Label Pairs</h3>
        <%= render FlatPack::Select::Component.new(
          name: "state",
          options: [["California", "CA"], ["New York", "NY"], ["Texas", "TX"], ["Florida", "FL"]],
          label: "State",
          value: "CA"
        ) %>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-2 text-[var(--color-foreground)]">Searchable Select</h3>
        <%= render FlatPack::Select::Component.new(
          name: "city",
          options: [
            "New York", "Los Angeles", "Chicago", "Houston", "Phoenix",
            "Philadelphia", "San Antonio", "San Diego", "Dallas", "San Jose",
            "Austin", "Jacksonville", "Fort Worth", "Columbus", "Indianapolis"
          ],
          label: "City",
          placeholder: "Search cities...",
          searchable: true,
          required: true
        ) %>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-2 text-[var(--color-foreground)]">Select with Disabled Options</h3>
        <%= render FlatPack::Select::Component.new(
          name: "plan",
          options: [
            {label: "Free Plan", value: "free", disabled: false},
            {label: "Pro Plan", value: "pro", disabled: false},
            {label: "Enterprise (Coming Soon)", value: "enterprise", disabled: true}
          ],
          label: "Select a plan",
          value: "pro"
        ) %>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-2 text-[var(--color-foreground)]">Select with Error</h3>
        <%= render FlatPack::Select::Component.new(
          name: "category",
          options: ["Electronics", "Clothing", "Books", "Food"],
          label: "Category",
          error: "Please select a category"
        ) %>
      </div>

      <div>
        <h3 class="text-lg font-medium mb-2 text-[var(--color-foreground)]">Disabled Select</h3>
        <%= render FlatPack::Select::Component.new(
          name: "disabled_select",
          options: ["Option 1", "Option 2"],
          label: "Disabled Select",
          value: "Option 1",
          disabled: true
        ) %>
      </div>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::Select::Component.new(
  name: "country",
  options: ["United States", "Canada", "United Kingdom"],
  label: "Country",
  placeholder: "Select a country"
) %&gt;

&lt;%= render FlatPack::Select::Component.new(
  name: "city",
  options: ["New York", "Los Angeles", "Chicago"],
  label: "City",
  searchable: true
) %&gt;</code></pre>
  </section>

  <!-- Combined Form Example -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-[var(--color-foreground)]">Complete Form Example</h2>
    <p class="text-sm text-[var(--color-muted-foreground)] mb-4">All input components in a single form</p>
    
    <form class="space-y-4 p-6 border border-[var(--color-border)] rounded-[var(--radius-lg)] bg-[var(--color-muted)]">
      <%= render FlatPack::TextInput::Component.new(
        name: "full_name",
        label: "Full Name",
        placeholder: "John Doe",
        required: true
      ) %>

      <%= render FlatPack::EmailInput::Component.new(
        name: "contact_email",
        label: "Email",
        placeholder: "john@example.com",
        required: true
      ) %>

      <%= render FlatPack::PhoneInput::Component.new(
        name: "contact_phone",
        label: "Phone Number",
        placeholder: "+1 (555) 123-4567"
      ) %>

      <%= render FlatPack::DateInput::Component.new(
        name: "birth_date",
        label: "Birth Date",
        max: Date.today.to_s
      ) %>

      <%= render FlatPack::NumberInput::Component.new(
        name: "age",
        label: "Age",
        min: 18,
        max: 120,
        step: 1,
        placeholder: "Enter your age"
      ) %>

      <%= render FlatPack::PasswordInput::Component.new(
        name: "account_password",
        label: "Password",
        placeholder: "Enter a secure password",
        required: true
      ) %>

      <%= render FlatPack::UrlInput::Component.new(
        name: "portfolio",
        label: "Portfolio URL",
        placeholder: "https://yourportfolio.com"
      ) %>

      <%= render FlatPack::FileInput::Component.new(
        name: "profile_picture",
        label: "Profile Picture",
        accept: "image/png,image/jpeg",
        max_size: 2_097_152,
        preview: true
      ) %>

      <%= render FlatPack::Select::Component.new(
        name: "country",
        options: [["United States", "us"], ["Canada", "ca"], ["United Kingdom", "uk"], ["Australia", "au"]],
        label: "Country",
        placeholder: "Select your country",
        required: true
      ) %>

      <%= render FlatPack::RadioGroup::Component.new(
        name: "notification_preference",
        options: ["Email", "SMS", "Push Notifications"],
        label: "Notification Preference",
        value: "Email"
      ) %>

      <%= render FlatPack::Checkbox::Component.new(
        name: "agree_terms",
        label: "I agree to the terms and conditions",
        required: true
      ) %>

      <%= render FlatPack::Checkbox::Component.new(
        name: "subscribe_newsletter",
        label: "Subscribe to our newsletter"
      ) %>

      <%= render FlatPack::TextArea::Component.new(
        name: "bio",
        label: "Biography",
        placeholder: "Tell us about yourself...",
        rows: 4
      ) %>

      <div class="pt-4">
        <%= render FlatPack::Button::Component.new(
          text: "Submit Form",
          style: :primary,
          size: :md
        ) %>
      </div>
    </form>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;form class="space-y-4"&gt;
