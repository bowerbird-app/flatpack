<%= render FlatPack::PageTitle::Component.new(
  title: "FlatPack Component API Index",
  subtitle: "Complete list of all available components, including shared components, with their variables, public methods, and descriptions (#{@component_index.size} total)."
) %>

<%= render FlatPack::Table::Component.new(data: @component_index) do |table| %>
  <% table.column(title: "Component") { |component| component[:name] } %>
  <% table.column(title: "Description") { |component| component[:description] } %>
  <% table.column(title: "Variables") { |component| component[:variables].join(", ") } %>
  <% table.column(title: "Methods") { |component| component[:methods].join(", ") } %>
<% end %>
