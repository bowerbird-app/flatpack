<%= render FlatPack::PageTitle::Component.new(
  title: "FlatPack Component API Index",
  subtitle: "Complete list of all available components, including shared components, with their variables, public methods, and descriptions (#{@component_index.size} total)."
) %>

<div class="overflow-x-auto rounded-[var(--radius-lg)] border border-[var(--color-border)]">
  <table class="w-full border-collapse bg-[var(--color-background)] text-sm">
    <thead class="bg-[var(--color-muted)]">
      <tr>
        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-[var(--color-muted-foreground)]">Component</th>
        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-[var(--color-muted-foreground)]">Description</th>
        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-[var(--color-muted-foreground)]">Variables</th>
        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-[var(--color-muted-foreground)]">Methods</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-[var(--color-border)]">
      <% @component_index.each do |component| %>
        <tr class="align-top">
          <td class="px-4 py-3 font-medium text-[var(--color-foreground)]"><%= component[:name] %></td>
          <td class="px-4 py-3 text-[var(--color-foreground)]"><%= component[:description] %></td>
          <td class="px-4 py-3 text-[var(--color-foreground)]"><%= component[:variables].join(", ") %></td>
          <td class="px-4 py-3 text-[var(--color-foreground)]"><%= component[:methods].join(", ") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
