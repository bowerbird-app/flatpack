<h1 class="text-4xl font-bold mb-4">Tooltip Component</h1>
<p class="text-lg text-[var(--color-muted-foreground)] mb-8">
  Hover or focus tooltips with smart positioning and accessibility support.
</p>

<!-- Basic Tooltips -->
<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Basic Tooltips</h2>
  <div class="flex gap-4 mb-4">
    <%= render FlatPack::Tooltip::Component.new(text: "This button triggers a tooltip with additional context.", placement: :top) do %>
      <%= render FlatPack::Button::Component.new(text: "Hover me", style: :secondary) %>
    <% end %>
    
    <%= render FlatPack::Tooltip::Component.new(text: "Helpful information appears here when you hover or focus this icon.", placement: :top) do %>
      <span class="inline-flex items-center gap-1 text-[var(--color-primary)] cursor-help">
        Info
        <%= render FlatPack::Shared::IconComponent.new(name: :question, size: :sm) %>
      </span>
    <% end %>
  </div>
  
  <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Tooltip::Component.new(text: "Tooltip text", placement: :top) do %&gt;
  &lt;%= render FlatPack::Button::Component.new(text: "Hover me") %&gt;
&lt;% end %&gt;</code></pre>
</section>

<!-- Tooltip Placements -->
<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Tooltip Placements</h2>
  <p class="text-[var(--color-muted-foreground)] mb-4">
    Tooltips automatically position themselves and adjust for viewport boundaries.
  </p>
  <div class="flex justify-center items-center flex-wrap gap-4 mb-4">
    <%= render FlatPack::Tooltip::Component.new(text: "Left placement: tooltip appears to the left of the trigger.", placement: :left) do %>
      <%= render FlatPack::Button::Component.new(text: "Left", style: :secondary) %>
    <% end %>

    <%= render FlatPack::Tooltip::Component.new(text: "Top placement: tooltip appears above the trigger.", placement: :top) do %>
      <%= render FlatPack::Button::Component.new(text: "Top", style: :secondary) %>
    <% end %>

    <%= render FlatPack::Tooltip::Component.new(text: "Bottom placement: tooltip appears below the trigger.", placement: :bottom) do %>
      <%= render FlatPack::Button::Component.new(text: "Bottom", style: :secondary) %>
    <% end %>

    <%= render FlatPack::Tooltip::Component.new(text: "Right placement: tooltip appears to the right of the trigger.", placement: :right) do %>
      <%= render FlatPack::Button::Component.new(text: "Right", style: :secondary) %>
    <% end %>
  </div>
  
  <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Tooltip::Component.new(text: "...", placement: :top) ... %&gt;
&lt;%= render FlatPack::Tooltip::Component.new(text: "...", placement: :bottom) ... %&gt;
&lt;%= render FlatPack::Tooltip::Component.new(text: "...", placement: :left) ... %&gt;
&lt;%= render FlatPack::Tooltip::Component.new(text: "...", placement: :right) ... %&gt;</code></pre>
</section>

<!-- Rich Content Tooltip -->
<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Rich Content Tooltip</h2>
  <div class="mb-4">
    <%= render FlatPack::Tooltip::Component.new(placement: :top) do |tooltip| %>
      <%= render FlatPack::Button::Component.new(text: "Hover for details", style: :primary) %>
      <% tooltip.with_tooltip_content do %>
        <div class="space-y-1">
          <strong class="block">Rich Tooltip</strong>
          <p class="text-sm">Tooltips can contain formatted content with multiple lines.</p>
        </div>
      <% end %>
    <% end %>
  </div>
  
  <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Tooltip::Component.new(placement: :top) do |tooltip| %&gt;
  &lt;%= render FlatPack::Button::Component.new(text: "Hover me") %&gt;
  &lt;% tooltip.with_tooltip_content do %&gt;
    &lt;div&gt;Rich HTML content here&lt;/div&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
</section>

<!-- Tooltips in Context -->
<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Tooltips in Context</h2>
  <p class="text-[var(--color-muted-foreground)] mb-4">
    Tooltips work great with icons, links, and inline elements.
  </p>
  
  <div class="space-y-4">
    <div class="flex items-center gap-2">
      <span>Username</span>
      <%= render FlatPack::Tooltip::Component.new(text: "Your username must be unique, use 3-20 characters, and cannot be changed later.", placement: :right) do %>
        <span class="inline-flex text-[var(--color-muted-foreground)] cursor-help">
          <%= render FlatPack::Shared::IconComponent.new(name: :question, size: :sm) %>
        </span>
      <% end %>
    </div>
    
    <div class="flex items-center gap-2">
      <span>Password Strength</span>
      <%= render FlatPack::Tooltip::Component.new(text: "Use at least 8 characters with uppercase, lowercase, numbers, and symbols for stronger security.", placement: :right) do %>
        <span class="inline-flex text-[var(--color-muted-foreground)] cursor-help">
          <%= render FlatPack::Shared::IconComponent.new(name: :lock, size: :sm) %>
        </span>
      <% end %>
    </div>
    
    <p class="text-[var(--color-foreground)]">
      This is a paragraph with an inline
      <%= render FlatPack::Tooltip::Component.new(text: "This inline tooltip provides additional context without interrupting the reading flow.", placement: :top) do %>
        <span class="text-[var(--color-primary)] underline decoration-dotted cursor-help">tooltip</span>
      <% end %>
      that provides more information.
    </p>
  </div>
</section>

<!-- Features -->
<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Features</h2>
  <ul class="list-disc list-inside space-y-2 text-[var(--color-foreground)]">
    <li><strong>Hover & Focus:</strong> Shows on mouse hover and keyboard focus</li>
    <li><strong>Smart Positioning:</strong> Automatically positions and adjusts for viewport boundaries</li>
    <li><strong>Accessible:</strong> Uses role="tooltip" and aria-describedby</li>
    <li><strong>Keyboard Friendly:</strong> Works with keyboard navigation</li>
    <li><strong>Smooth Animations:</strong> Fade in/out transitions</li>
    <li><strong>No JavaScript Lib:</strong> Pure Stimulus implementation, no dependencies</li>
    <li><strong>Mobile Aware:</strong> Touch-friendly behavior</li>
  </ul>
</section>
