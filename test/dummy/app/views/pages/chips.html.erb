<div class="max-w-6xl mx-auto p-6">
  <%= render FlatPack::PageTitle::Component.new(
    title: "Chip Component",
    subtitle: "Compact elements that represent input, attributes, or actions. Use chips for tags, filters, selections, and more."
  ) %>

  <%= render "pages/component_method_variables_table", component: :chip %>

  <!-- Basic Chips -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Basic Chips", anchor_link: true, subtitle: "Examples for Basic Chips.") %>
    <div class="flex flex-wrap gap-3 mb-4">
      <%= render FlatPack::Chip::Component.new(text: "Default") %>
      <%= render FlatPack::Chip::Component.new(text: "Primary", style: :primary) %>
      <%= render FlatPack::Chip::Component.new(text: "Success", style: :success) %>
      <%= render FlatPack::Chip::Component.new(text: "Warning", style: :warning) %>
      <%= render FlatPack::Chip::Component.new(text: "Danger", style: :danger) %>
      <%= render FlatPack::Chip::Component.new(text: "Info", style: :info) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE')
        &lt;%= render FlatPack::Chip::Component.new(text: "Default") %&gt;
        &lt;%= render FlatPack::Chip::Component.new(text: "Primary", style: :primary) %&gt;
        &lt;%= render FlatPack::Chip::Component.new(text: "Success", style: :success) %&gt;
        &lt;%= render FlatPack::Chip::Component.new(text: "Warning", style: :warning) %&gt;
        &lt;%= render FlatPack::Chip::Component.new(text: "Danger", style: :danger) %&gt;
        &lt;%= render FlatPack::Chip::Component.new(text: "Info", style: :info) %&gt;
      CODE
    ) %>
  </section>

  <!-- Chip Sizes -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Chip Sizes", anchor_link: true, subtitle: "Examples for Chip Sizes.") %>
    <div class="flex items-center gap-3 mb-4">
      <%= render FlatPack::Chip::Component.new(text: "Small", size: :sm) %>
      <%= render FlatPack::Chip::Component.new(text: "Medium (default)", size: :md) %>
      <%= render FlatPack::Chip::Component.new(text: "Large", size: :lg) %>
    </div>
    <div class="flex items-center gap-3 mb-4">
      <%= render FlatPack::Chip::Component.new(text: "Small", style: :primary, size: :sm) %>
      <%= render FlatPack::Chip::Component.new(text: "Medium", style: :primary, size: :md) %>
      <%= render FlatPack::Chip::Component.new(text: "Large", style: :primary, size: :lg) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE')
        &lt;%= render FlatPack::Chip::Component.new(text: "Small", size: :sm) %&gt;
        &lt;%= render FlatPack::Chip::Component.new(text: "Medium", size: :md) %&gt;
        &lt;%= render FlatPack::Chip::Component.new(text: "Large", size: :lg) %&gt;
      CODE
    ) %>
  </section>

  <!-- Chips with Leading Icons -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Chips with Leading Icons", anchor_link: true, subtitle: "Examples for Chips with Leading Icons.") %>
    <div class="flex flex-wrap gap-3 mb-4">
      <%= render FlatPack::Chip::Component.new(text: "Ruby", style: :danger) do |c| %>
        <% c.with_leading do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        <% end %>
      <% end %>
      <%= render FlatPack::Chip::Component.new(text: "JavaScript", style: :warning) do |c| %>
        <% c.with_leading do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        <% end %>
      <% end %>
      <%= render FlatPack::Chip::Component.new(text: "TypeScript", style: :info) do |c| %>
        <% c.with_leading do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- Removable Chips -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Removable Chips", anchor_link: true, subtitle: "Examples for Removable Chips.") %>
    <p class="text-sm text-muted-foreground mb-4">
      Click the Ã— button to remove chips. Check the console for events.
    </p>
    <div class="flex flex-wrap gap-3 mb-4" id="removable-chips-container">
      <%= render FlatPack::Chip::Component.new(text: "Ruby", style: :danger, removable: true, value: "ruby") %>
      <%= render FlatPack::Chip::Component.new(text: "Rails", style: :danger, removable: true, value: "rails") %>
      <%= render FlatPack::Chip::Component.new(text: "JavaScript", style: :warning, removable: true, value: "javascript") %>
      <%= render FlatPack::Chip::Component.new(text: "React", style: :info, removable: true, value: "react") %>
      <%= render FlatPack::Chip::Component.new(text: "TypeScript", style: :info, removable: true, value: "typescript") %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE')
        &lt;%= render FlatPack::Chip::Component.new(
          text: "Ruby",
          style: :danger,
          removable: true,
          value: "ruby"
        ) %&gt;
      CODE
    ) %>
    <script>
      document.addEventListener('chip:removed', (event) => {
        console.log('Chip removed:', event.detail.value)
      })
    </script>
  </section>

  <!-- Selectable Filter Chips -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Selectable Filter Chips", anchor_link: true, subtitle: "Examples for Selectable Filter Chips.") %>
    <p class="text-sm text-muted-foreground mb-4">
      Click to toggle selection. Check the console for events.
    </p>
    <div class="flex flex-wrap gap-3 mb-4">
      <%= render FlatPack::Chip::Component.new(
        text: "All",
        type: :button,
        selected: true,
        value: "all",
        data: { action: "click->flat-pack--chip#toggle" }
      ) %>
      <%= render FlatPack::Chip::Component.new(
        text: "Active",
        type: :button,
        selected: false,
        value: "active",
        data: { action: "click->flat-pack--chip#toggle" }
      ) %>
      <%= render FlatPack::Chip::Component.new(
        text: "Pending",
        type: :button,
        selected: false,
        value: "pending",
        data: { action: "click->flat-pack--chip#toggle" }
      ) %>
      <%= render FlatPack::Chip::Component.new(
        text: "Archived",
        type: :button,
        selected: false,
        value: "archived",
        data: { action: "click->flat-pack--chip#toggle" }
      ) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE')
        &lt;%= render FlatPack::Chip::Component.new(
          text: "All",
          type: :button,
          selected: true,
          value: "all",
          data: { action: "click->flat-pack--chip#toggle" }
        ) %&gt;
      CODE
    ) %>
    <script>
      document.addEventListener('chip:toggled', (event) => {
        console.log('Chip toggled:', event.detail.value, 'Selected:', event.detail.selected)
      })
    </script>
  </section>

  <!-- Disabled Chips -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Disabled Chips", anchor_link: true, subtitle: "Examples for Disabled Chips.") %>
    <div class="flex flex-wrap gap-3 mb-4">
      <%= render FlatPack::Chip::Component.new(text: "Disabled", disabled: true) %>
      <%= render FlatPack::Chip::Component.new(text: "Disabled Primary", style: :primary, disabled: true) %>
      <%= render FlatPack::Chip::Component.new(text: "Disabled Button", type: :button, disabled: true) %>
      <%= render FlatPack::Chip::Component.new(text: "Disabled Link", type: :link, href: "#", disabled: true) %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE')
        &lt;%= render FlatPack::Chip::Component.new(text: "Disabled", disabled: true) %&gt;
      CODE
    ) %>
  </section>

  <!-- Link Chips -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Link Chips", anchor_link: true, subtitle: "Examples for Link Chips.") %>
    <div class="flex flex-wrap gap-3 mb-4">
      <%= render FlatPack::Chip::Component.new(
        text: "View All",
        type: :link,
        href: "/demo",
        style: :primary
      ) %>
      <%= render FlatPack::Chip::Component.new(
        text: "Documentation",
        type: :link,
        href: "#"
      ) do |c| %>
        <% c.with_trailing do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
            <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
            <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
          </svg>
        <% end %>
      <% end %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE')
        &lt;%= render FlatPack::Chip::Component.new(
          text: "View All",
          type: :link,
          href: "/demo",
          style: :primary
        ) %&gt;
      CODE
    ) %>
  </section>

  <!-- ChipGroup Examples -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "ChipGroup - Wrapping Chips", anchor_link: true, subtitle: "Examples for ChipGroup - Wrapping Chips.") %>
    <p class="text-sm text-muted-foreground mb-4">
      ChipGroup provides consistent spacing and wrapping for collections of chips.
    </p>
    <%= render FlatPack::ChipGroup::Component.new(class: "mb-4") do %>
      <%= render FlatPack::Chip::Component.new(text: "Ruby", style: :danger) %>
      <%= render FlatPack::Chip::Component.new(text: "Rails", style: :danger) %>
      <%= render FlatPack::Chip::Component.new(text: "JavaScript", style: :warning) %>
      <%= render FlatPack::Chip::Component.new(text: "React", style: :info) %>
      <%= render FlatPack::Chip::Component.new(text: "TypeScript", style: :info) %>
      <%= render FlatPack::Chip::Component.new(text: "Node.js", style: :success) %>
      <%= render FlatPack::Chip::Component.new(text: "Python", style: :info) %>
      <%= render FlatPack::Chip::Component.new(text: "Go", style: :info) %>
      <%= render FlatPack::Chip::Component.new(text: "Rust", style: :danger) %>
    <% end %>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE')
        &lt;%= render FlatPack::ChipGroup::Component.new do %&gt;
          &lt;%= render FlatPack::Chip::Component.new(text: "Ruby", style: :danger) %&gt;
          &lt;%= render FlatPack::Chip::Component.new(text: "Rails", style: :danger) %&gt;
          &lt;%= render FlatPack::Chip::Component.new(text: "JavaScript", style: :warning) %&gt;
        &lt;% end %&gt;
      CODE
    ) %>
  </section>

  <!-- ChipGroup No Wrap -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "ChipGroup - No Wrapping", anchor_link: true, subtitle: "Examples for ChipGroup - No Wrapping.") %>
    <div class="overflow-x-auto mb-4">
      <%= render FlatPack::ChipGroup::Component.new(wrap: false) do %>
        <%= render FlatPack::Chip::Component.new(text: "Ruby", style: :danger) %>
        <%= render FlatPack::Chip::Component.new(text: "Rails", style: :danger) %>
        <%= render FlatPack::Chip::Component.new(text: "JavaScript", style: :warning) %>
        <%= render FlatPack::Chip::Component.new(text: "React", style: :info) %>
        <%= render FlatPack::Chip::Component.new(text: "TypeScript", style: :info) %>
      <% end %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE')
        &lt;%= render FlatPack::ChipGroup::Component.new(wrap: false) do %&gt;
          &lt;%= render FlatPack::Chip::Component.new(text: "Ruby", style: :danger) %&gt;
        &lt;% end %&gt;
      CODE
    ) %>
  </section>

  <!-- Chips with Avatars -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Chips with Avatars", anchor_link: true, subtitle: "Examples for Chips with Avatars.") %>
    <div class="flex flex-wrap gap-3 mb-4">
      <%= render FlatPack::Chip::Component.new(text: "Nathan Garcia") do |c| %>
        <% c.with_leading do %>
          <%= render FlatPack::Avatar::Component.new(
            initials: "NG",
            size: :xs
          ) %>
        <% end %>
      <% end %>
      <%= render FlatPack::Chip::Component.new(text: "Jane Doe", style: :primary) do |c| %>
        <% c.with_leading do %>
          <%= render FlatPack::Avatar::Component.new(
            initials: "JD",
            size: :xs
          ) %>
        <% end %>
      <% end %>
      <%= render FlatPack::Chip::Component.new(text: "Alex Brown", style: :success) do |c| %>
        <% c.with_leading do %>
          <%= render FlatPack::Avatar::Component.new(
            initials: "AB",
            size: :xs
          ) %>
        <% end %>
      <% end %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE')
        &lt;%= render FlatPack::Chip::Component.new(text: "Nathan Garcia") do |c| %&gt;
          &lt;% c.with_leading do %&gt;
            &lt;%= render FlatPack::Avatar::Component.new(
              initials: "NG",
              size: :xs
            ) %&gt;
          &lt;% end %&gt;
        &lt;% end %&gt;
      CODE
    ) %>
  </section>

  <!-- Chips with AvatarGroup -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Chips with Avatar Groups", anchor_link: true, subtitle: "Examples for Chips with Avatar Groups.") %>
    <div class="flex flex-wrap gap-3 mb-4">
      <%= render FlatPack::Chip::Component.new(text: "Design Team", style: :primary) do |c| %>
        <% c.with_leading do %>
          <%= render FlatPack::AvatarGroup::Component.new(
            items: [
              { initials: "NG", size: :xs },
              { initials: "JD", size: :xs },
              { initials: "AB", size: :xs }
            ],
            size: :xs,
            max: 3,
            overlap: :sm
          ) %>
        <% end %>
      <% end %>
      <%= render FlatPack::Chip::Component.new(text: "Engineering Team", style: :info) do |c| %>
        <% c.with_leading do %>
          <%= render FlatPack::AvatarGroup::Component.new(
            items: [
              { initials: "MK", size: :xs },
              { initials: "SL", size: :xs },
              { initials: "TW", size: :xs },
              { initials: "PQ", size: :xs }
            ],
            size: :xs,
            max: 3,
            overlap: :sm
          ) %>
        <% end %>
      <% end %>
    </div>
    <%= render FlatPack::CodeBlock::Component.new(
      code: CGI.unescapeHTML(<<~'CODE')
        &lt;%= render FlatPack::Chip::Component.new(text: "Design Team", style: :primary) do |c| %&gt;
          &lt;% c.with_leading do %&gt;
            &lt;%= render FlatPack::AvatarGroup::Component.new(
              items: [
                { initials: "NG", size: :xs },
                { initials: "JD", size: :xs },
                { initials: "AB", size: :xs }
              ],
              size: :xs,
              max: 3
            ) %&gt;
          &lt;% end %&gt;
        &lt;% end %&gt;
      CODE
    ) %>
  </section>

  <!-- Complex Example -->
  <section class="mb-12">
    <%= render FlatPack::SectionTitle::Component.new(title: "Complete Example - Tag Input", anchor_link: true, subtitle: "Examples for Complete Example - Tag Input.") %>
    <p class="text-sm text-muted-foreground mb-4">
      A practical example showing a tag input interface with removable chips.
    </p>
    <div class="border border-border rounded-lg p-4">
      <label class="block text-sm font-medium mb-2">Project Tags</label>
      <%= render FlatPack::ChipGroup::Component.new(class: "mb-3") do %>
        <%= render FlatPack::Chip::Component.new(text: "Frontend", style: :info, removable: true, value: "frontend") %>
        <%= render FlatPack::Chip::Component.new(text: "Backend", style: :success, removable: true, value: "backend") %>
        <%= render FlatPack::Chip::Component.new(text: "Database", style: :warning, removable: true, value: "database") %>
        <%= render FlatPack::Chip::Component.new(text: "UI/UX", style: :primary, removable: true, value: "ui-ux") %>
      <% end %>
      <input
        type="text"
        placeholder="Add a tag..."
        class="w-full px-3 py-2 border border-border rounded-md focus:outline-none focus:ring-2 focus:ring-ring"
      />
    </div>
  </section>
</div>
