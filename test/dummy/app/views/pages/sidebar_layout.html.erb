<div class="max-w-4xl mx-auto space-y-8">
  <div>
    <h2 class="text-2xl font-bold mb-4">Sidebar Layout Now Powers the Full Dummy App</h2>
    <p class="text-[var(--color-text-muted)] mb-4">
      The sidebar + top nav shell is now the default layout for all demo pages.
      Use the sidebar to navigate and the top-right toggle to switch between left/right sidebar placement.
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <%= render FlatPack::Card::Component.new(style: :elevated) do |card| %>
      <% card.header do %>
        <h3 class="font-semibold">Desktop Behavior</h3>
      <% end %>
      <% card.body do %>
        <ul class="space-y-2 text-sm">
          <li>✓ Collapsible sidebar with smooth transitions</li>
          <li>✓ Persistent collapse state via localStorage</li>
          <li>✓ Optional left/right placement (query param)</li>
          <li>✓ Shared navigation across every demo page</li>
        </ul>
      <% end %>
    <% end %>

    <%= render FlatPack::Card::Component.new(style: :elevated) do |card| %>
      <% card.header do %>
        <h3 class="font-semibold">Mobile Behavior</h3>
      <% end %>
      <% card.body do %>
        <ul class="space-y-2 text-sm">
          <li>✓ Off-canvas drawer with backdrop</li>
          <li>✓ Hamburger toggle in top nav</li>
          <li>✓ Escape/backdrop close support</li>
          <li>✓ Main content remains in one shared shell</li>
        </ul>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= render FlatPack::Card::Component.new(style: :outlined) do |card| %>
      <% card.header do %>
        <h3 class="font-semibold">Current Shell Configuration</h3>
      <% end %>
      <% card.body do %>
        <dl class="space-y-2 text-sm">
          <div class="flex justify-between">
            <dt class="font-medium">Sidebar Position:</dt>
            <dd class="text-[var(--color-text-muted)]"><%= params[:side] || "left" %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="font-medium">Storage Key:</dt>
            <dd class="text-[var(--color-text-muted)]">flatpack-dummy-shell</dd>
          </div>
          <div class="flex justify-between">
            <dt class="font-medium">Scope:</dt>
            <dd class="text-[var(--color-text-muted)]">All dummy demo pages</dd>
          </div>
        </dl>
      <% end %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 gap-4">
    <% 4.times do |i| %>
      <%= render FlatPack::Card::Component.new(style: :default) do |card| %>
        <% card.header do %>
          <h3 class="font-semibold">Example Content <%= i + 1 %></h3>
        <% end %>
        <% card.body do %>
          <p class="text-sm text-[var(--color-text-muted)]">
            This content is rendered inside the shared main slot of the global sidebar layout.
          </p>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
