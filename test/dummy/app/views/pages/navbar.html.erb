<h1 class="text-4xl font-bold mb-4">Top Nav Components</h1>
<p class="text-lg text-[var(--color-muted-foreground)] mb-8">
  Top nav slot behavior with live examples and copyable code snippets.
</p>

<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Left Slot</h2>
  <p class="text-sm text-[var(--color-muted-foreground)] mb-4">
    Use the left slot for navigation controls like a mobile menu toggle, back button, and page title.
  </p>
  <div class="rounded-lg overflow-hidden mb-4">
    <%= render FlatPack::TopNav::Component.new(class: "relative rounded-lg border border-[var(--color-border)]") do |nav| %>
      <% nav.left do %>
        <button class="p-2 rounded-lg hover:bg-[var(--color-muted)] transition-colors" type="button" aria-label="Toggle sidebar">
          <%= render FlatPack::Shared::IconComponent.new(name: :menu, size: :md) %>
        </button>
        <h3 class="text-base font-semibold">Dashboard</h3>
      <% end %>

      <% nav.center do %>
        <div class="text-sm text-[var(--color-text-muted)]">Page context</div>
      <% end %>

      <% nav.right do %>
        <button class="p-2 rounded-lg hover:bg-[var(--color-muted)] transition-colors" type="button" aria-label="Notifications">
          <%= render FlatPack::Shared::IconComponent.new(name: :bell, size: :md) %>
        </button>
      <% end %>
    <% end %>
  </div>
  <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::TopNav::Component.new do |nav| %&gt;
  &lt;% nav.left do %&gt;
    &lt;button type=&quot;button&quot; class=&quot;p-2 rounded-lg hover:bg-[var(--color-muted)]&quot; aria-label=&quot;Toggle sidebar&quot;&gt;
      &lt;%= render FlatPack::Shared::IconComponent.new(name: :menu, size: :md) %&gt;
    &lt;/button&gt;
    &lt;h3 class=&quot;text-base font-semibold&quot;&gt;Dashboard&lt;/h3&gt;
  &lt;% end %&gt;

  &lt;% nav.center do %&gt;
    &lt;div class=&quot;text-sm text-[var(--color-text-muted)]&quot;&gt;Page context&lt;/div&gt;
  &lt;% end %&gt;

  &lt;% nav.right do %&gt;
    &lt;button type=&quot;button&quot; class=&quot;p-2 rounded-lg hover:bg-[var(--color-muted)]&quot; aria-label=&quot;Notifications&quot;&gt;
      &lt;%= render FlatPack::Shared::IconComponent.new(name: :bell, size: :md) %&gt;
    &lt;/button&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
</section>

<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Center Slot</h2>
  <p class="text-sm text-[var(--color-muted-foreground)] mb-4">
    Use the center slot for search, tabs, or any content that should stay visually centered.
  </p>
  <div class="rounded-lg overflow-hidden mb-4">
    <%= render FlatPack::TopNav::Component.new(class: "relative rounded-lg border border-[var(--color-border)]") do |nav| %>
      <% nav.left do %>
        <h3 class="text-base font-semibold">Projects</h3>
      <% end %>

      <% nav.center do %>
        <%= render FlatPack::Search::Component.new(
          placeholder: "Search projects, files, or people..."
        ) %>
      <% end %>

      <% nav.right do %>
        <%= render FlatPack::Button::Component.new(text: "New", size: :sm, style: :primary) %>
      <% end %>
    <% end %>
  </div>
  <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::TopNav::Component.new do |nav| %&gt;
  &lt;% nav.left do %&gt;
    &lt;h3 class=&quot;text-base font-semibold&quot;&gt;Projects&lt;/h3&gt;
  &lt;% end %&gt;

  &lt;% nav.center do %&gt;
    &lt;%= render FlatPack::Search::Component.new(
      placeholder: &quot;Search projects, files, or people...&quot;
    ) %&gt;
  &lt;% end %&gt;

  &lt;% nav.right do %&gt;
    &lt;%= render FlatPack::Button::Component.new(text: &quot;New&quot;, size: :sm, style: :primary) %&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
</section>

<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Right Slot</h2>
  <p class="text-sm text-[var(--color-muted-foreground)] mb-4">
    Use the right slot for user actions like notifications, settings, profile, and quick-create actions.
  </p>
  <div class="rounded-lg overflow-hidden mb-4">
    <%= render FlatPack::TopNav::Component.new(class: "relative rounded-lg border border-[var(--color-border)]") do |nav| %>
      <% nav.left do %>
        <h3 class="text-base font-semibold">Workspace</h3>
      <% end %>

      <% nav.center do %>
        <div class="text-sm text-[var(--color-text-muted)]">Overview</div>
      <% end %>

      <% nav.right do %>
        <div class="flex items-center gap-2">
          <button class="p-2 rounded-lg hover:bg-[var(--color-muted)] transition-colors" type="button" aria-label="Help">
            <%= render FlatPack::Shared::IconComponent.new(name: :question, size: :md) %>
          </button>
          <button class="p-2 rounded-lg hover:bg-[var(--color-muted)] transition-colors" type="button" aria-label="Settings">
            <%= render FlatPack::Shared::IconComponent.new(name: :cog, size: :md) %>
          </button>
          <div class="w-8 h-8 rounded-full bg-[var(--color-muted)] text-sm font-semibold flex items-center justify-center">AB</div>
        </div>
      <% end %>
    <% end %>
  </div>
  <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::TopNav::Component.new do |nav| %&gt;
  &lt;% nav.left do %&gt;
    &lt;h3 class=&quot;text-base font-semibold&quot;&gt;Workspace&lt;/h3&gt;
  &lt;% end %&gt;

  &lt;% nav.center do %&gt;
    &lt;div class=&quot;text-sm text-[var(--color-text-muted)]&quot;&gt;Overview&lt;/div&gt;
  &lt;% end %&gt;

  &lt;% nav.right do %&gt;
    &lt;div class=&quot;flex items-center gap-2&quot;&gt;
      &lt;button type=&quot;button&quot; class=&quot;p-2 rounded-lg hover:bg-[var(--color-muted)]&quot; aria-label=&quot;Help&quot;&gt;
        &lt;%= render FlatPack::Shared::IconComponent.new(name: :question, size: :md) %&gt;
      &lt;/button&gt;
      &lt;button type=&quot;button&quot; class=&quot;p-2 rounded-lg hover:bg-[var(--color-muted)]&quot; aria-label=&quot;Settings&quot;&gt;
        &lt;%= render FlatPack::Shared::IconComponent.new(name: :cog, size: :md) %&gt;
      &lt;/button&gt;
      &lt;div class=&quot;w-8 h-8 rounded-full bg-[var(--color-muted)] text-sm font-semibold flex items-center justify-center&quot;&gt;AB&lt;/div&gt;
    &lt;/div&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
</section>

<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Alignment Rules</h2>
  <p class="text-sm text-[var(--color-muted-foreground)] mb-4">
    <code>left</code> is start-aligned, <code>center</code> is flexed and centered, and <code>right</code> sits at the far edge when center is present.
  </p>
  <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::TopNav::Component.new do |nav| %&gt;
  &lt;% nav.left do %&gt;Left&lt;% end %&gt;
  &lt;% nav.center do %&gt;Centered&lt;% end %&gt;
  &lt;% nav.right do %&gt;Right&lt;% end %&gt;
&lt;% end %&gt;</code></pre>
</section>
