<div class="max-w-4xl mx-auto">
  <h1 class="text-4xl font-bold mb-4">Button Component</h1>
  <p class="text-lg text-[var(--color-muted-foreground)] mb-8">
    Buttons with different schemes and configurations.
  </p>

  <!-- Basic Buttons -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Basic Buttons</h2>
    <div class="flex gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(text: "Primary", style: :primary) %>
      <%= render FlatPack::Button::Component.new(text: "Secondary", style: :secondary) %>
      <%= render FlatPack::Button::Component.new(text: "Ghost", style: :ghost) %>
      <%= render FlatPack::Button::Component.new(text: "Success", style: :success) %>
      <%= render FlatPack::Button::Component.new(text: "Warning", style: :warning) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(text: "Primary", style: :primary) %&gt;
&lt;%= render FlatPack::Button::Component.new(text: "Secondary", style: :secondary) %&gt;
&lt;%= render FlatPack::Button::Component.new(text: "Ghost", style: :ghost) %&gt;
&lt;%= render FlatPack::Button::Component.new(text: "Success", style: :success) %&gt;
&lt;%= render FlatPack::Button::Component.new(text: "Warning", style: :warning) %&gt;</code></pre>
  </section>

  <!-- Button Sizes -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Button Sizes</h2>
    <div class="flex items-center gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(text: "Small", style: :primary, size: :sm) %>
      <%= render FlatPack::Button::Component.new(text: "Medium (default)", style: :primary, size: :md) %>
      <%= render FlatPack::Button::Component.new(text: "Large", style: :primary, size: :lg) %>
    </div>
    <div class="flex items-center gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(text: "Small", style: :secondary, size: :sm) %>
      <%= render FlatPack::Button::Component.new(text: "Medium", style: :secondary, size: :md) %>
      <%= render FlatPack::Button::Component.new(text: "Large", style: :secondary, size: :lg) %>
    </div>
    <div class="flex items-center gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(text: "Small", style: :ghost, size: :sm) %>
      <%= render FlatPack::Button::Component.new(text: "Medium", style: :ghost, size: :md) %>
      <%= render FlatPack::Button::Component.new(text: "Large", style: :ghost, size: :lg) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(text: "Small", style: :primary, size: :sm) %&gt;
&lt;%= render FlatPack::Button::Component.new(text: "Medium", style: :primary, size: :md) %&gt;
&lt;%= render FlatPack::Button::Component.new(text: "Large", style: :primary, size: :lg) %&gt;</code></pre>
  </section>

  <!-- Buttons as Links -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Buttons as Links</h2>
    <div class="flex gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(text: "Go Home", url: root_path, style: :primary) %>
      <%= render FlatPack::Button::Component.new(text: "View Tables", url: demo_tables_path, style: :secondary) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(
  text: "Go Home",
  url: root_path,
  style: :primary
) %&gt;</code></pre>
  </section>

  <!-- Links with Target -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Links with Target</h2>
    <div class="flex gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(
        text: "Open in New Tab",
        url: "https://github.com",
        style: :primary,
        target: "_blank"
      ) %>
      <%= render FlatPack::Button::Component.new(
        text: "Open in Same Tab",
        url: demo_tables_path,
        style: :secondary,
        target: "_self"
      ) %>
      <%= render FlatPack::Button::Component.new(
        text: "Default (no target)",
        url: root_path,
        style: :ghost
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(
  text: "Open in New Tab",
  url: "https://github.com",
  style: :primary,
  target: "_blank"  # Automatically adds rel="noopener noreferrer"
) %&gt;</code></pre>
  </section>

  <!-- Link Component -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Link Component</h2>
    <p class="text-[var(--color-muted-foreground)] mb-4">
      For text links without button styling, use the Link component. It includes built-in URL validation and security features.
    </p>
    <div class="flex gap-4 mb-4">
      <%= render FlatPack::Link::Component.new(href: demo_tables_path) do %>
        Go to Tables
      <% end %>
      <%= render FlatPack::Link::Component.new(href: "https://github.com", target: "_blank") do %>
        GitHub (opens in new tab)
      <% end %>
      <%= render FlatPack::Link::Component.new(href: "mailto:hello@example.com") do %>
        Email us
      <% end %>
      <%= render FlatPack::Link::Component.new(href: "tel:+1234567890") do %>
        Call us
      <% end %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Link::Component.new(href: demo_tables_path) do %&gt;
  Go to Tables
&lt;% end %&gt;

&lt;%= render FlatPack::Link::Component.new(href: "https://github.com", target: "_blank") do %&gt;
  GitHub (opens in new tab)  # Automatically adds rel="noopener noreferrer"
&lt;% end %&gt;

&lt;%= render FlatPack::Link::Component.new(href: "mailto:hello@example.com") do %&gt;
  Email us
&lt;% end %&gt;</code></pre>
  </section>

  <!-- Link Component with Custom Classes -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Link Component with Custom Styling</h2>
    <div class="space-y-3 mb-4">
      <%= render FlatPack::Link::Component.new(href: "#", class: "text-blue-600 hover:text-blue-800 font-semibold") do %>
        Custom styled link
      <% end %>
      <br>
      <%= render FlatPack::Link::Component.new(href: "#", class: "text-green-600 underline") do %>
        Underlined green link
      <% end %>
      <br>
      <%= render FlatPack::Link::Component.new(href: "#", class: "text-[var(--color-primary)] hover:underline") do %>
        Theme colored link
      <% end %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Link::Component.new(
  href: "#",
  class: "text-blue-600 hover:text-blue-800 font-semibold"
) do %&gt;
  Custom styled link
&lt;% end %&gt;</code></pre>
  </section>

  <!-- Buttons with ID and Custom Classes -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Buttons with ID and Custom Classes</h2>
    <div class="flex gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(
        text: "Button with ID",
        style: :primary,
        id: "my-special-button"
      ) %>
      <%= render FlatPack::Button::Component.new(
        text: "Link with ID",
        url: root_path,
        style: :secondary,
        id: "my-special-link"
      ) %>
      <%= render FlatPack::Button::Component.new(
        text: "Custom Classes",
        style: :ghost,
        class: "text-lg font-bold"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(
  text: "Button with ID",
  style: :primary,
  id: "my-special-button"
) %&gt;

&lt;%= render FlatPack::Button::Component.new(
  text: "Custom Classes",
  style: :ghost,
  class: "text-lg font-bold"  # Additional classes are merged
) %&gt;</code></pre>
  </section>

  <!-- Full Width Buttons -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Full Width Button</h2>
    <div class="mb-4">
      <%= render FlatPack::Button::Component.new(
        text: "Full Width Button",
        style: :primary,
        class: "w-full"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(
  text: "Full Width Button",
  style: :primary,
  class: "w-full"
) %&gt;</code></pre>
  </section>

  <!-- Disabled Buttons -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Disabled Buttons</h2>
    <div class="flex gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(
        text: "Disabled Primary",
        style: :primary,
        disabled: true
      ) %>
      <%= render FlatPack::Button::Component.new(
        text: "Disabled Secondary",
        style: :secondary,
        disabled: true
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(
  text: "Disabled",
  style: :primary,
  disabled: true
) %&gt;</code></pre>
  </section>

  <!-- Icon Only Buttons -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Icon Only Buttons</h2>
    <div class="flex items-center gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(icon: "search", icon_only: true, style: :primary, size: :sm) %>
      <%= render FlatPack::Button::Component.new(icon: "search", icon_only: true, style: :primary, size: :md) %>
      <%= render FlatPack::Button::Component.new(icon: "search", icon_only: true, style: :primary, size: :lg) %>
    </div>
    <div class="flex items-center gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(icon: "settings", icon_only: true, style: :secondary) %>
      <%= render FlatPack::Button::Component.new(icon: "trash", icon_only: true, style: :ghost) %>
      <%= render FlatPack::Button::Component.new(icon: "check", icon_only: true, style: :success) %>
      <%= render FlatPack::Button::Component.new(icon: "alert", icon_only: true, style: :warning) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(
  icon: "search",
  icon_only: true,
  style: :primary
) %&gt;</code></pre>
  </section>

  <!-- Loading Buttons -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Loading Buttons</h2>
    <div class="flex gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(text: "Saving", loading: true, style: :primary) %>
      <%= render FlatPack::Button::Component.new(text: "Processing", loading: true, style: :secondary) %>
      <%= render FlatPack::Button::Component.new(icon: "upload", icon_only: true, loading: true, style: :success) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(
  text: "Saving",
  loading: true,
  style: :primary
) %&gt;

&lt;%# Icon-only loading button %&gt;
&lt;%= render FlatPack::Button::Component.new(
  icon: "upload",
  icon_only: true,
  loading: true,
  style: :success
) %&gt;</code></pre>
  </section>

  <!-- Button Groups (Wrapped) -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Button Groups (Wrapped Together)</h2>
    <div class="mb-4">
      <%= render FlatPack::ButtonGroup::Component.new do |group| %>
        <% group.with_button(FlatPack::Button::Component.new(text: "Left", style: :secondary)) %>
        <% group.with_button(FlatPack::Button::Component.new(text: "Middle", style: :secondary)) %>
        <% group.with_button(FlatPack::Button::Component.new(text: "Right", style: :secondary)) %>
      <% end %>
    </div>
    <div class="mb-4">
      <%= render FlatPack::ButtonGroup::Component.new do |group| %>
        <% group.with_button(FlatPack::Button::Component.new(icon: "align-left", icon_only: true, style: :secondary)) %>
        <% group.with_button(FlatPack::Button::Component.new(icon: "align-center", icon_only: true, style: :secondary)) %>
        <% group.with_button(FlatPack::Button::Component.new(icon: "align-right", icon_only: true, style: :secondary)) %>
      <% end %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::ButtonGroup::Component.new do |group| %&gt;
  &lt;% group.with_button(FlatPack::Button::Component.new(text: "Left", style: :secondary)) %&gt;
  &lt;% group.with_button(FlatPack::Button::Component.new(text: "Middle", style: :secondary)) %&gt;
  &lt;% group.with_button(FlatPack::Button::Component.new(text: "Right", style: :secondary)) %&gt;
&lt;% end %&gt;</code></pre>
  </section>

  <!-- Segmented Buttons -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Segmented Buttons (Selected State)</h2>
    <div class="mb-4">
      <%= render FlatPack::SegmentedButtons::Component.new do |group| %>
        <% group.with_button(text: "Day", selected: true) %>
        <% group.with_button(text: "Week") %>
        <% group.with_button(text: "Month") %>
        <% group.with_button(text: "Year") %>
      <% end %>
    </div>
    <div class="mb-4">
      <%= render FlatPack::SegmentedButtons::Component.new do |group| %>
        <% group.with_button(text: "List") %>
        <% group.with_button(text: "Grid", selected: true) %>
        <% group.with_button(text: "Table") %>
      <% end %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::SegmentedButtons::Component.new do |group| %&gt;
  &lt;% group.with_button(text: "Day", selected: true) %&gt;
  &lt;% group.with_button(text: "Week") %&gt;
  &lt;% group.with_button(text: "Month") %&gt;
  &lt;% group.with_button(text: "Year") %&gt;
&lt;% end %&gt;</code></pre>
  </section>

  <!-- Regular Button Spacing (Not Grouped) -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Regular Button Spacing (Not Grouped)</h2>
    <div class="flex gap-2 mb-4">
      <%= render FlatPack::Button::Component.new(text: "Save", style: :primary) %>
      <%= render FlatPack::Button::Component.new(text: "Cancel", style: :secondary) %>
      <%= render FlatPack::Button::Component.new(text: "Delete", style: :ghost) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;div class="flex gap-2"&gt;
  &lt;%= render FlatPack::Button::Component.new(text: "Save", style: :primary) %&gt;
  &lt;%= render FlatPack::Button::Component.new(text: "Cancel", style: :secondary) %&gt;
&lt;/div&gt;</code></pre>
  </section>
</div>
