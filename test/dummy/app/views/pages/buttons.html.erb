<div class="max-w-4xl mx-auto">
  <h1 class="text-4xl font-bold mb-4">Button Component</h1>
  <p class="text-lg text-[var(--color-muted-foreground)] mb-8">
    Buttons with different schemes and configurations.
  </p>

  <!-- Basic Buttons -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Basic Buttons</h2>
    <div class="flex gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(label: "Primary", scheme: :primary) %>
      <%= render FlatPack::Button::Component.new(label: "Secondary", scheme: :secondary) %>
      <%= render FlatPack::Button::Component.new(label: "Ghost", scheme: :ghost) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(label: "Primary", scheme: :primary) %&gt;
&lt;%= render FlatPack::Button::Component.new(label: "Secondary", scheme: :secondary) %&gt;
&lt;%= render FlatPack::Button::Component.new(label: "Ghost", scheme: :ghost) %&gt;</code></pre>
  </section>

  <!-- Button Sizes -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Button Sizes</h2>
    <div class="flex items-center gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(label: "Small", scheme: :primary, size: :sm) %>
      <%= render FlatPack::Button::Component.new(label: "Medium (default)", scheme: :primary, size: :md) %>
      <%= render FlatPack::Button::Component.new(label: "Large", scheme: :primary, size: :lg) %>
    </div>
    <div class="flex items-center gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(label: "Small", scheme: :secondary, size: :sm) %>
      <%= render FlatPack::Button::Component.new(label: "Medium", scheme: :secondary, size: :md) %>
      <%= render FlatPack::Button::Component.new(label: "Large", scheme: :secondary, size: :lg) %>
    </div>
    <div class="flex items-center gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(label: "Small", scheme: :ghost, size: :sm) %>
      <%= render FlatPack::Button::Component.new(label: "Medium", scheme: :ghost, size: :md) %>
      <%= render FlatPack::Button::Component.new(label: "Large", scheme: :ghost, size: :lg) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(label: "Small", scheme: :primary, size: :sm) %&gt;
&lt;%= render FlatPack::Button::Component.new(label: "Medium", scheme: :primary, size: :md) %&gt;
&lt;%= render FlatPack::Button::Component.new(label: "Large", scheme: :primary, size: :lg) %&gt;</code></pre>
  </section>

  <!-- Buttons as Links -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Buttons as Links</h2>
    <div class="flex gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(label: "Go Home", url: root_path, scheme: :primary) %>
      <%= render FlatPack::Button::Component.new(label: "View Tables", url: demo_tables_path, scheme: :secondary) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(
  label: "Go Home",
  url: root_path,
  scheme: :primary
) %&gt;</code></pre>
  </section>

  <!-- Links with Target -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Links with Target</h2>
    <div class="flex gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(
        label: "Open in New Tab",
        url: "https://github.com",
        scheme: :primary,
        target: "_blank"
      ) %>
      <%= render FlatPack::Button::Component.new(
        label: "Open in Same Tab",
        url: demo_tables_path,
        scheme: :secondary,
        target: "_self"
      ) %>
      <%= render FlatPack::Button::Component.new(
        label: "Default (no target)",
        url: root_path,
        scheme: :ghost
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(
  label: "Open in New Tab",
  url: "https://github.com",
  scheme: :primary,
  target: "_blank"  # Automatically adds rel="noopener noreferrer"
) %&gt;</code></pre>
  </section>

  <!-- Buttons with ID and Custom Classes -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Buttons with ID and Custom Classes</h2>
    <div class="flex gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(
        label: "Button with ID",
        scheme: :primary,
        id: "my-special-button"
      ) %>
      <%= render FlatPack::Button::Component.new(
        label: "Link with ID",
        url: root_path,
        scheme: :secondary,
        id: "my-special-link"
      ) %>
      <%= render FlatPack::Button::Component.new(
        label: "Custom Classes",
        scheme: :ghost,
        class: "text-lg font-bold"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(
  label: "Button with ID",
  scheme: :primary,
  id: "my-special-button"
) %&gt;

&lt;%= render FlatPack::Button::Component.new(
  label: "Custom Classes",
  scheme: :ghost,
  class: "text-lg font-bold"  # Additional classes are merged
) %&gt;</code></pre>
  </section>

  <!-- Full Width Buttons -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Full Width Button</h2>
    <div class="mb-4">
      <%= render FlatPack::Button::Component.new(
        label: "Full Width Button",
        scheme: :primary,
        class: "w-full"
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(
  label: "Full Width Button",
  scheme: :primary,
  class: "w-full"
) %&gt;</code></pre>
  </section>

  <!-- Disabled Buttons -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Disabled Buttons</h2>
    <div class="flex gap-3 mb-4">
      <%= render FlatPack::Button::Component.new(
        label: "Disabled Primary",
        scheme: :primary,
        disabled: true
      ) %>
      <%= render FlatPack::Button::Component.new(
        label: "Disabled Secondary",
        scheme: :secondary,
        disabled: true
      ) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Button::Component.new(
  label: "Disabled",
  scheme: :primary,
  disabled: true
) %&gt;</code></pre>
  </section>

  <!-- Button Group -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Button Group</h2>
    <div class="flex gap-2 mb-4">
      <%= render FlatPack::Button::Component.new(label: "Save", scheme: :primary) %>
      <%= render FlatPack::Button::Component.new(label: "Cancel", scheme: :secondary) %>
      <%= render FlatPack::Button::Component.new(label: "Delete", scheme: :ghost) %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;div class="flex gap-2"&gt;
  &lt;%= render FlatPack::Button::Component.new(label: "Save", scheme: :primary) %&gt;
  &lt;%= render FlatPack::Button::Component.new(label: "Cancel", scheme: :secondary) %&gt;
&lt;/div&gt;</code></pre>
  </section>
</div>
