<div class="max-w-4xl mx-auto">
  <h1 class="text-4xl font-bold mb-4">Breadcrumb Component</h1>
  <p class="text-lg text-[var(--color-muted-foreground)] mb-8">
    Navigation components that show the user's current location in the site hierarchy.
  </p>

  <!-- Basic Breadcrumbs -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Basic Breadcrumbs</h2>
    <div class="mb-4">
      <%= render FlatPack::Breadcrumb::Component.new do |breadcrumb| %>
        <% breadcrumb.with_item(text: "Home", href: "/") %>
        <% breadcrumb.with_item(text: "Products", href: "/products") %>
        <% breadcrumb.with_item(text: "Electronics", href: "/electronics") %>
        <% breadcrumb.with_item(text: "Laptops") %>
      <% end %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Breadcrumb::Component.new do |breadcrumb| %&gt;
  &lt;% breadcrumb.with_item(text: "Home", href: "/") %&gt;
  &lt;% breadcrumb.with_item(text: "Products", href: "/products") %&gt;
  &lt;% breadcrumb.with_item(text: "Electronics", href: "/electronics") %&gt;
  &lt;% breadcrumb.with_item(text: "Laptops") %&gt;
&lt;% end %&gt;</code></pre>
  </section>

  <!-- Different Separators -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Separator Styles</h2>
    
    <div class="space-y-4 mb-4">
      <div>
        <p class="text-sm text-[var(--color-muted-foreground)] mb-2">Chevron (default)</p>
        <%= render FlatPack::Breadcrumb::Component.new(separator: :chevron) do |breadcrumb| %>
          <% breadcrumb.with_item(text: "Home", href: "/") %>
          <% breadcrumb.with_item(text: "Products", href: "/products") %>
          <% breadcrumb.with_item(text: "Item") %>
        <% end %>
      </div>

      <div>
        <p class="text-sm text-[var(--color-muted-foreground)] mb-2">Slash</p>
        <%= render FlatPack::Breadcrumb::Component.new(separator: :slash) do |breadcrumb| %>
          <% breadcrumb.with_item(text: "Home", href: "/") %>
          <% breadcrumb.with_item(text: "Products", href: "/products") %>
          <% breadcrumb.with_item(text: "Item") %>
        <% end %>
      </div>

      <div>
        <p class="text-sm text-[var(--color-muted-foreground)] mb-2">Arrow</p>
        <%= render FlatPack::Breadcrumb::Component.new(separator: :arrow) do |breadcrumb| %>
          <% breadcrumb.with_item(text: "Home", href: "/") %>
          <% breadcrumb.with_item(text: "Products", href: "/products") %>
          <% breadcrumb.with_item(text: "Item") %>
        <% end %>
      </div>

      <div>
        <p class="text-sm text-[var(--color-muted-foreground)] mb-2">Dot</p>
        <%= render FlatPack::Breadcrumb::Component.new(separator: :dot) do |breadcrumb| %>
          <% breadcrumb.with_item(text: "Home", href: "/") %>
          <% breadcrumb.with_item(text: "Products", href: "/products") %>
          <% breadcrumb.with_item(text: "Item") %>
        <% end %>
      </div>
    </div>

    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Breadcrumb::Component.new(separator: :chevron) do ... %&gt;
&lt;%= render FlatPack::Breadcrumb::Component.new(separator: :slash) do ... %&gt;
&lt;%= render FlatPack::Breadcrumb::Component.new(separator: :arrow) do ... %&gt;
&lt;%= render FlatPack::Breadcrumb::Component.new(separator: :dot) do ... %&gt;</code></pre>
  </section>

  <!-- Custom Icon Separator -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Custom Icon Separator</h2>
    <div class="mb-4">
      <%= render FlatPack::Breadcrumb::Component.new(separator: :custom, separator_icon: "chevron-right") do |breadcrumb| %>
        <% breadcrumb.with_item(text: "Dashboard", href: "/dashboard") %>
        <% breadcrumb.with_item(text: "Settings", href: "/settings") %>
        <% breadcrumb.with_item(text: "Profile") %>
      <% end %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Breadcrumb::Component.new(
  separator: :custom,
  separator_icon: "chevron-right"
) do |breadcrumb| %&gt;
  &lt;% breadcrumb.with_item(text: "Dashboard", href: "/dashboard") %&gt;
  &lt;% breadcrumb.with_item(text: "Settings", href: "/settings") %&gt;
  &lt;% breadcrumb.with_item(text: "Profile") %&gt;
&lt;% end %&gt;</code></pre>
  </section>

  <!-- With Home Item -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">With Home Item</h2>
    <div class="mb-4">
      <%= render FlatPack::Breadcrumb::Component.new(show_home: true) do |breadcrumb| %>
        <% breadcrumb.with_item(text: "Settings", href: "/settings") %>
        <% breadcrumb.with_item(text: "Profile") %>
      <% end %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Breadcrumb::Component.new(show_home: true) do |breadcrumb| %&gt;
  &lt;% breadcrumb.with_item(text: "Settings", href: "/settings") %&gt;
  &lt;% breadcrumb.with_item(text: "Profile") %&gt;
&lt;% end %&gt;</code></pre>
  </section>

  <!-- Custom Home Configuration -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Custom Home Configuration</h2>
    <div class="mb-4">
      <%= render FlatPack::Breadcrumb::Component.new(
        show_home: true,
        home_url: "/dashboard",
        home_text: "Dashboard",
        home_icon: "dashboard"
      ) do |breadcrumb| %>
        <% breadcrumb.with_item(text: "Reports", href: "/reports") %>
        <% breadcrumb.with_item(text: "Monthly") %>
      <% end %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Breadcrumb::Component.new(
  show_home: true,
  home_url: "/dashboard",
  home_text: "Dashboard",
