        <% end %>
      </div>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Breadcrumb::Component.new(max_items: 3) do |breadcrumb| %&gt;
  &lt;% breadcrumb.with_item(text: "Home", href: "/") %&gt;
  &lt;% breadcrumb.with_item(text: "Level 1", href: "/l1") %&gt;
  &lt;% breadcrumb.with_item(text: "Level 2", href: "/l2") %&gt;
  &lt;% breadcrumb.with_item(text: "Level 3", href: "/l3") %&gt;
  &lt;% breadcrumb.with_item(text: "Current") %&gt;
&lt;% end %&gt;
&lt;!-- Shows: Home â€º ... â€º Level 3 â€º Current --&gt;</code></pre>
  </section>

  <!-- Custom Styling -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Custom Styling</h2>
    <div class="mb-4">
      <%= render FlatPack::Breadcrumb::Component.new(
        class: "p-4 bg-blue-50 rounded-lg",
        separator: :slash
      ) do |breadcrumb| %>
        <% breadcrumb.with_item(text: "Home", href: "/") %>
        <% breadcrumb.with_item(text: "Products", href: "/products") %>
        <% breadcrumb.with_item(text: "Item") %>
      <% end %>
    </div>
    <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto"><code>&lt;%= render FlatPack::Breadcrumb::Component.new(
  class: "p-4 bg-blue-50 rounded-lg",
  separator: :slash
) do |breadcrumb| %&gt;
  &lt;% breadcrumb.with_item(text: "Home", href: "/") %&gt;
  &lt;% breadcrumb.with_item(text: "Products", href: "/products") %&gt;
  &lt;% breadcrumb.with_item(text: "Item") %&gt;
&lt;% end %&gt;</code></pre>
  </section>

  <!-- E-commerce Example -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Real-world Example: E-commerce</h2>
    <div class="mb-4 p-6 border border-[var(--color-border)] rounded-lg">
      <%= render FlatPack::Breadcrumb::Component.new(
        show_home: true,
        separator: :chevron,
        class: "mb-4"
      ) do |breadcrumb| %>
        <% breadcrumb.with_item(text: "Products", href: "/products", icon: "shopping-bag") %>
