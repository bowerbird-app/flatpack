  &lt;% breadcrumb.with_item(text: "Laptops", icon: "laptop") %&gt;
&lt;% end %&gt;</code></pre>
  </section>

  <!-- Collapsed Items -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4">Collapsed Items (max_items)</h2>
    <div class="space-y-4 mb-4">
      <div>
        <p class="text-sm text-[var(--color-muted-foreground)] mb-2">max_items: 3</p>
        <%= render FlatPack::Breadcrumb::Component.new(max_items: 3) do |breadcrumb| %>
          <% breadcrumb.with_item(text: "Home", href: "/") %>
          <% breadcrumb.with_item(text: "Level 1", href: "/l1") %>
          <% breadcrumb.with_item(text: "Level 2", href: "/l2") %>
          <% breadcrumb.with_item(text: "Level 3", href: "/l3") %>
          <% breadcrumb.with_item(text: "Current") %>
        <% end %>
      </div>

      <div>
        <p class="text-sm text-[var(--color-muted-foreground)] mb-2">max_items: 2</p>
        <%= render FlatPack::Breadcrumb::Component.new(max_items: 2) do |breadcrumb| %>
          <% breadcrumb.with_item(text: "Home", href: "/") %>
