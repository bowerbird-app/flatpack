<h1 class="text-4xl font-bold mb-4">Empty State Component</h1>
<p class="text-lg text-[var(--color-muted-foreground)] mb-8">
  User-friendly empty states with optional icons and custom graphics.
</p>

<!-- Basic Empty State -->
<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Basic Empty State</h2>
  <div class="border border-[var(--color-border)] rounded-lg p-8">
    <%= render FlatPack::EmptyState::Component.new(
      title: "No messages",
      description: "You don't have any messages yet. Start a conversation to see it here."
    ) %>
  </div>
  
  <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::EmptyState::Component.new(
  title: "No messages",
    description: "You don't have any messages yet."
) %&gt;</code></pre>
</section>

<!-- Empty State with Actions -->
<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Empty State with Actions</h2>
  <div class="border border-[var(--color-border)] rounded-lg p-8">
    <%= render FlatPack::EmptyState::Component.new(
      title: "No projects found",
      description: "Get started by creating your first project. Projects help you organize your work."
    ) do |empty| %>
      <% empty.actions do %>
        <%= render FlatPack::Button::Component.new(text: "Create Project", style: :primary) %>
        <%= render FlatPack::Button::Component.new(text: "Import Project", style: :secondary) %>
      <% end %>
    <% end %>
  </div>
  
  <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::EmptyState::Component.new(
  title: "No projects found",
  description: "Get started by creating your first project."
) do |empty| %&gt;
  &lt;% empty.actions do %&gt;
    &lt;%= render FlatPack::Button::Component.new(text: "Create Project", style: :primary) %&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
</section>

<!-- Empty State with Icons -->
<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Icons</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="border border-[var(--color-border)] rounded-lg p-8">
      <%= render FlatPack::EmptyState::Component.new(
        title: "Inbox empty",
        description: "All caught up! No new messages.",
        icon: :inbox
      ) %>
    </div>
    
    <div class="border border-[var(--color-border)] rounded-lg p-8">
      <%= render FlatPack::EmptyState::Component.new(
        title: "No results",
        description: "Try adjusting your search or filters.",
        icon: :search
      ) %>
    </div>

    <div class="border border-[var(--color-border)] rounded-lg p-8">
      <%= render FlatPack::EmptyState::Component.new(
        title: "No files uploaded",
        description: "Upload files to get started.",
        icon: :upload
      ) %>
    </div>
  </div>
  
  <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::EmptyState::Component.new(
  title: "Inbox empty",
  description: "All caught up!",
  icon: :inbox
) %&gt;

&lt;%= render FlatPack::EmptyState::Component.new(
  title: "No results",
  description: "Try adjusting your search.",
  icon: :search
) %&gt;

&lt;%= render FlatPack::EmptyState::Component.new(
  title: "No files uploaded",
  description: "Upload files to get started.",
  icon: :upload
) %&gt;</code></pre>
</section>

<!-- Empty State in Tables -->
<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Empty State in Table</h2>
  <%= render FlatPack::Table::Component.new(data: []) do |table| %>
    <% table.column(title: "Name", html: ->(row) { row.name }) %>
    <% table.column(title: "Email", html: ->(row) { row.email }) %>
    <% table.column(title: "Status", html: ->(row) { row.status }) %>
  <% end %>
  
  <pre class="bg-[var(--color-muted)] p-4 rounded overflow-x-auto mt-4"><code>&lt;%= render FlatPack::Table::Component.new(data: []) do |table| %&gt;
  &lt;!-- Table automatically shows empty state when data is empty --&gt;
&lt;% end %&gt;</code></pre>
</section>

<!-- Empty State in Cards -->
<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Empty State in Card</h2>
  <%= render FlatPack::Card::Component.new(style: :outlined) do |card| %>
    <% card.header do %>
      <h3 class="text-lg font-semibold">Recent Activity</h3>
    <% end %>
    <% card.body do %>
      <%= render FlatPack::EmptyState::Component.new(
        title: "No activity yet",
        description: "Your recent activity will appear here.",
        icon: :inbox
      ) %>
    <% end %>
  <% end %>
</section>

<!-- Empty State with Custom Graphic -->
<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Empty State with Custom Graphic</h2>
  <div class="border border-[var(--color-border)] rounded-lg p-8">
    <%= render FlatPack::EmptyState::Component.new(
      title: "No data available",
      description: "Upload a CSV file or connect a data source to get started."
    ) do |empty| %>
      <% empty.graphic do %>
        <div class="w-32 h-32 rounded-full bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center mb-6">
          <%= render FlatPack::Shared::IconComponent.new(name: :upload, size: :lg, class: "text-blue-600") %>
        </div>
      <% end %>
      <% empty.actions do %>
        <%= render FlatPack::Button::Component.new(text: "Upload CSV", style: :primary) %>
        <%= render FlatPack::Button::Component.new(text: "Connect Source", style: :secondary) %>
      <% end %>
    <% end %>
  </div>
</section>

<!-- Features -->
<section class="mb-12">
  <h2 class="text-2xl font-semibold mb-4">Features</h2>
  <ul class="list-disc list-inside space-y-2 text-[var(--color-foreground)]">
    <li><strong>Built-in Icons:</strong> Inbox and search icons included</li>
    <li><strong>Optional Icon:</strong> Pass <code>icon: :inbox</code>, <code>icon: :search</code>, or any icon name when needed</li>
    <li><strong>Custom Graphics:</strong> Slot for custom illustrations or icons</li>
    <li><strong>Action Buttons:</strong> Add primary and secondary CTAs</li>
    <li><strong>Centered Layout:</strong> Visually balanced and centered</li>
    <li><strong>Flexible Content:</strong> Title, description, and actions</li>
    <li><strong>Responsive:</strong> Adapts to container width</li>
  </ul>
</section>
