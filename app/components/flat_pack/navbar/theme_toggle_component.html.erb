<button <%= tag.attributes(button_attributes) %>>
  <svg class="<%= SIZES[@size] %> transition-transform duration-200" data-navbar-theme-toggle-target="icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <%# Sun icon (visible in light mode) %>
    <circle cx="12" cy="12" r="5" class="dark:hidden"></circle>
    <line x1="12" y1="1" x2="12" y2="3" class="dark:hidden"></line>
    <line x1="12" y1="21" x2="12" y2="23" class="dark:hidden"></line>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64" class="dark:hidden"></line>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78" class="dark:hidden"></line>
    <line x1="1" y1="12" x2="3" y2="12" class="dark:hidden"></line>
    <line x1="21" y1="12" x2="23" y2="12" class="dark:hidden"></line>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36" class="dark:hidden"></line>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22" class="dark:hidden"></line>
    <%# Moon icon (visible in dark mode) %>
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" class="hidden dark:block"></path>
  </svg>
  <% if @show_label %>
    <span class="sr-only">Toggle theme</span>
  <% end %>
</button>
