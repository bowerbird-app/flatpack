<div <%= tag.attributes(section_attributes) %>>
  <% if @title %>
    <% if @collapsible %>
      <button
        class="w-full flex items-center justify-between px-3 py-2 text-sm font-semibold text-[var(--color-muted-foreground)] hover:text-[var(--color-foreground)] transition-all duration-300"
        data-controller="flat-pack--navbar-section"
        data-action="click->flat-pack--navbar-section#toggle"
        data-flat-pack--navbar-section-collapsed-value="<%= @collapsed %>"
        data-flat-pack--navbar-target="sectionTitle">
        <span><%= @title %></span>
        <svg class="w-4 h-4 transition-transform duration-200" data-flat-pack--navbar-section-target="chevron" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </button>
    <% else %>
      <div class="px-3 py-2 text-sm font-semibold text-[var(--color-muted-foreground)] transition-all duration-300" data-flat-pack--navbar-target="sectionTitle"><%= @title %></div>
    <% end %>
  <% end %>

  <div class="space-y-1" <% if @collapsible %>data-navbar-section-target="content"<% end %>>
    <% items.each do |item| %>
      <%= item %>
    <% end %>
  </div>
</div>
