<nav <%= tag.attributes(nav_attributes) %>>
  <div class="flex items-center gap-4">
    <% if @show_menu_toggle %>
      <button
        class="p-2 rounded-md hover:bg-[var(--color-muted)] transition-colors lg:hidden"
        data-action="click->navbar#toggleLeftNav"
        aria-label="Toggle navigation menu">
        <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    <% end %>

    <a href="<%= @logo_href %>" class="flex items-center gap-2 text-lg font-semibold">
      <% if @logo_url %>
        <%= image_tag @logo_url, alt: "Logo", class: "h-8 w-8" %>
      <% end %>
      <% if @logo_text %>
        <span><%= @logo_text %></span>
      <% end %>
    </a>
  </div>

  <div class="flex items-center gap-2">
    <% if actions? %>
      <% actions.each do |action| %>
        <%= action %>
      <% end %>
    <% end %>

    <% if @show_theme_toggle && !theme_toggle? %>
      <%= render FlatPack::Navbar::ThemeToggleComponent.new %>
    <% elsif theme_toggle? %>
      <%= theme_toggle %>
    <% end %>
  </div>
</nav>
