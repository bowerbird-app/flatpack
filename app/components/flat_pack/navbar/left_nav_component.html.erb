<aside <%= tag.attributes(aside_attributes) %>>
  <nav class="flex-1 overflow-y-auto p-4 space-y-1">
    <% if items? %>
      <% items.each do |item| %>
        <%= item %>
      <% end %>
    <% end %>

    <% if sections? %>
      <% sections.each do |section| %>
        <%= section %>
      <% end %>
    <% end %>
  </nav>

  <% if @show_toggle && @collapsible %>
    <button
      class="p-4 border-t border-[var(--color-border)] hover:bg-[var(--color-muted)] transition-colors flex items-center justify-center"
      data-action="click->navbar#toggleLeftNav"
      aria-label="Toggle sidebar">
      <svg class="w-5 h-5 transition-transform duration-300" data-navbar-target="collapseIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>
  <% end %>
</aside>
